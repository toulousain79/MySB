##################### FIRST LINE #####################################

#### Install packages
RKHunterDir=$MySB_InstallDir"`Func_SQL_Command 'SELECT' 'MySB_db' 'dir' 'repositories' "name = 'RKHunter'"`"
RKHunterUrl="`Func_SQL_Command 'SELECT' 'MySB_db' 'url' 'repositories' "name = 'RKHunter'"`"
RKHunterFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'file' 'repositories' "name = 'RKHunter'"`"

if [ ! -f $MySB_InstallDir/files/$RKHunterFile ]; then
	wget --no-check-certificate $RKHunterUrl -O $MySB_InstallDir/files/$RKHunterFile
fi
if [ ! -d $RKHunterDir ] && [ -f $MySB_InstallDir/files/$RKHunterFile ]; then
	tar -zxvf $MySB_InstallDir/files/$RKHunterFile -C $MySB_InstallDir/temp/
	SubDir="`tar -ztf $MySB_InstallDir/files/$RKHunterFile | sed -e 's@/.*@@' | uniq`"
	if [ -d $MySB_InstallDir/temp/$SubDir ]; then
		mv $MySB_InstallDir/temp/$SubDir $RKHunterDir
	fi
fi

cd $RKHunterDir/
./installer.sh --install

#### /etc/rkhunter.conf
perl -pi -e "s/^#ALLOW_SSH_ROOT_USER=no/ALLOW_SSH_ROOT_USER=yes/g" /etc/rkhunter.conf
perl -pi -e "s/^#APP_WHITELIST=\"\"/APP_WHITELIST=\"openssl:1.0.1e gpg:1.4.12\"/g" /etc/rkhunter.conf
perl -pi -e "s/^#ALLOWPROMISCIF=eth0/ALLOWPROMISCIF=eth0 tap0/g" /etc/rkhunter.conf

#### Execute
rkhunter --versioncheck --nocolors
rkhunter --propupd --nocolors
rkhunter --update --nocolors
rkhunter --sk --check --report-warnings-only

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################