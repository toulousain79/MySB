##################### FIRST LINE #####################################

if [ "$ToInstall_Webmin" == "YES" ]; then
	#### Install package
	PackagesManage install "webmin libwrap0 libwrap0-dev"

	#### Create certificate
	if [ ! -f $MySB_InstallDir/ssl/webmin.cert ]; then
		ScriptInvoke 'source' "$MySB_InstallDir/install/Certificates" 'CreateServiceCertificate' 'webmin'
	fi

	cat $MySB_InstallDir/ssl/webmin.cert > /etc/webmin/miniserv.pem
	cat $MySB_InstallDir/ssl/webmin.key >> /etc/webmin/miniserv.pem

	#### Config
	perl -pi -e "s/10000/$Ports_Webmin/g" /etc/webmin/miniserv.conf
	perl -pi -e "s/force_init=0/force_init=1/g" /etc/webmin/firewall/config

	sed -i '/sched_action/d' /etc/webmin/package-updates/config
	echo "sched_action=1" >> /etc/webmin/package-updates/config
	sed -i '/sched_email/d' /etc/webmin/package-updates/config
	echo "sched_email=$MainUserEmail" >> /etc/webmin/package-updates/config

	#### CPAN for TCP wrapper
	# if [ ! -d /root/.cpan/CPAN/ ]; then
		# mkdir /root/.cpan/CPAN/
	# fi
	# cat root.cpan.CPAN.MyConfig.pm.tmpl | tee -a /root/.cpan/CPAN/MyConfig.pm
	# perl -X -f -MCPAN -e 'install Authen::Libwrap'
	
	# crontab -l > /tmp/crontab.tmp
	# sed -i '/webmin\/package-updates/d' /tmp/crontab.tmp
	#echo "0 2 * * 3 /etc/webmin/package-updates/update.pl" >> /tmp/crontab.tmp
	# crontab /tmp/crontab.tmp
	# rm -f /tmp/crontab.tmp

	#### Webmin modules
	PluginOpenVpnActive="`Func_SQL_Command 'SELECT' 'MySB_db' 'active' 'repositories' "name = 'OpenVPNadmin WebMin'"`"
	PluginOpenVpnFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'file' 'repositories' "name = 'OpenVPNadmin WebMin'"`"
	PluginOpenVpnUrl="`Func_SQL_Command 'SELECT' 'MySB_db' 'url' 'repositories' "name = 'OpenVPNadmin WebMin'"`"
	PluginOpenVpnOldFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'old_file' 'repositories' "name = 'OpenVPNadmin WebMin'"`"
	if [ "$PluginOpenVpnActive" == "1" ]; then
		if [ ! -f $MySB_InstallDir/files/$PluginOpenVpnFile ]; then
			wget --no-check-certificate -O $MySB_InstallDir/files/$PluginOpenVpnFile $PluginOpenVpnUrl
		fi
	fi
	if [ ! -f $MySB_InstallDir/files/$PluginOpenVpnOldFile ]; then
		rm -vf $MySB_InstallDir/files/$PluginOpenVpnOldFile
	fi
	if [ -f $MySB_InstallDir/files/$PluginOpenVpnFile ]; then
		perl /usr/share/webmin/install-module.pl $MySB_InstallDir/files/$PluginOpenVpnFile
	fi

	PluginNginxActive="`Func_SQL_Command 'SELECT' 'MySB_db' 'active' 'repositories' "name = 'Nginx Webmin Module'"`"
	PluginNginxFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'file' 'repositories' "name = 'Nginx Webmin Module'"`"
	PluginNginxUrl="`Func_SQL_Command 'SELECT' 'MySB_db' 'url' 'repositories' "name = 'Nginx Webmin Module'"`"
	PluginNginxOldFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'old_file' 'repositories' "name = 'Nginx Webmin Module'"`"
	if [ "$PluginNginxActive" == "1" ]; then
		if [ ! -f $MySB_InstallDir/files/$PluginNginxFile ]; then
			wget --no-check-certificate -O $MySB_InstallDir/files/$PluginNginxFile $PluginNginxUrl
		fi
	fi
	if [ ! -f $MySB_InstallDir/files/$PluginNginxOldFile ]; then
		rm -vf $MySB_InstallDir/files/$PluginNginxOldFile
	fi
	if [ -f $MySB_InstallDir/files/$PluginNginxFile ]; then
		perl /usr/share/webmin/install-module.pl $MySB_InstallDir/files/$PluginNginxFile
	fi

	PluginMiniDlnaActive="`Func_SQL_Command 'SELECT' 'MySB_db' 'active' 'repositories' "name = 'Nginx Webmin Module'"`"
	PluginMiniDlnaFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'file' 'repositories' "name = 'Nginx Webmin Module'"`"
	PluginMiniDlnaUrl="`Func_SQL_Command 'SELECT' 'MySB_db' 'url' 'repositories' "name = 'Nginx Webmin Module'"`"
	PluginMiniDlnaOldFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'old_file' 'repositories' "name = 'Nginx Webmin Module'"`"
	if [ "$PluginMiniDlnaActive" == "1" ]; then
		if [ ! -f $MySB_InstallDir/files/$PluginMiniDlnaFile ]; then
			wget --no-check-certificate -O $MySB_InstallDir/files/$PluginMiniDlnaFile $PluginMiniDlnaUrl
		fi
	fi
	if [ ! -f $MySB_InstallDir/files/$PluginMiniDlnaOldFile ]; then
		rm -vf $MySB_InstallDir/files/$PluginMiniDlnaOldFile
	fi
	if [ -f $MySB_InstallDir/files/$PluginMiniDlnaFile ]; then
		perl /usr/share/webmin/install-module.pl $MySB_InstallDir/files/$PluginMiniDlnaFile
	fi

	if CheckCommand 0 webmin; then
		Func_SQL_Command 'UPDATE' 'MySB_db' 'services' "port_tcp1 = '$Ports_Webmin', to_install = '0', is_installed = '1'" "serv_name = 'Webmin'" '-echo'
	fi

	#### START services
	ManageServices start "webmin"
fi

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################