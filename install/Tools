##################### FIRST LINE #####################################

#### Composer
ComposerDir="`Func_SQL_Command 'SELECT' 'MySB_db' 'dir' 'repositories' "name = 'Composer'"`"
ComposerUrl="`Func_SQL_Command 'SELECT' 'MySB_db' 'url' 'repositories' "name = 'Composer'"`"
ComposerFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'file' 'repositories' "name = 'Composer'"`"
ComposerToUpgrade="`Func_SQL_Command 'SELECT' 'MySB_db' 'upgrade' 'repositories' "name = 'Composer'"`"
if ! CheckCommand 0 composer || [ $ComposerToUpgrade -eq 1 ]; then
	if [ -f $MySB_InstallDir/files/$ComposerFile ]; then
		cp -v $MySB_InstallDir/files/$ComposerFile $ComposerDir
	else
		curl --insecure -sS $ComposerUrl | php -- --install-dir=$MySB_InstallDir/files/
		cp -v $MySB_InstallDir/files/$ComposerFile $ComposerDir
	fi
fi
chmod +x /usr/bin/composer
composer self-update

#### NodeJS
NodeDir=$MySB_InstallDir"`Func_SQL_Command 'SELECT' 'MySB_db' 'dir' 'repositories' "name = 'NodeJS'"`"
NodeUrl="`Func_SQL_Command 'SELECT' 'MySB_db' 'url' 'repositories' "name = 'NodeJS'"`"
NodeFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'file' 'repositories' "name = 'NodeJS'"`"
if [ ! -f $MySB_InstallDir/files/$NodeFile ]; then
	wget --no-check-certificate $NodeUrl -O $MySB_InstallDir/files/$NodeFile
fi
if [ ! -d $NodeDir ]; then
	tar -zxvf $MySB_InstallDir/files/$NodeFile -C $MySB_InstallDir/temp/
	SubDir="`tar -ztf $MySB_InstallDir/files/$NodeFile | cut -d '/' -f 1 | uniq`"
	if [ -d $MySB_InstallDir/temp/$SubDir ]; then
		mv -v $MySB_InstallDir/temp/$SubDir $NodeDir
	fi
fi
cd $NodeDir
if [ -d out/ ]; then
	make clean
fi
./configure
make -j$PROCESSOR
make install
/sbin/ldconfig

#### Bower
if CheckCommand 0 bower; then
	bower update --allow-root --config.interactive=false
else
	npm install -g bower
fi

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################