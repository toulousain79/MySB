##################### FIRST LINE #####################################

#### Wget
gfnGetRepoValues 'Wget' && gfnRepoManageByType
cd $gsRepoDir/
./configure --with-ssl=openssl --with-openssl=yes
make -j$gsProcessors
make check
make install
make installcheck

#### GeoIP update
gfnGetRepoValues 'GeoIPupdate' && gfnRepoManageByType
cd $gsRepoDir/
./configure
make -j$gsProcessors
make install
perl -pi -e "s/# ProductIds/ProductIds/g" /usr/local/etc/GeoIP.conf
perl -pi -e "s/GeoLite-Legacy-IPv6-Country GeoLite-Legacy-IPv6-City//g" /usr/local/etc/GeoIP.conf
perl -pi -e "s/# DatabaseDirectory \/usr\/local\/share\/GeoIP/DatabaseDirectory \/usr\/share\/GeoIP/g" /usr/local/etc/GeoIP.conf

#### Composer
gfnGetRepoValues 'Composer'
if ! gfnCheckCommand 0 composer || [ $gnRepoUpgrade -eq 1 ]; then
	gfnRepoManageByType
fi
chmod +x /usr/bin/composer
composer self-update

#### NodeJS
gfnGetRepoValues 'NodeJS' && gfnRepoManageByType
cd $gsRepoDir
if [ -d out/ ]; then
	make clean
fi
./configure
make -j$gsProcessors
make install
/sbin/ldconfig

#### Bower
if gfnCheckCommand 0 bower; then
	bower update --allow-root --config.interactive=false
else
	npm install -g bower
fi

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################