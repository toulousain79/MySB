##################### FIRST LINE #####################################

#### GeoIP update
gfnGetRepoValues 'GeoIPupdate' && gfnRepoManageByType
if [ $gnRepoUpgrade -eq 1 ] || [ "$gsSwitch" == "INSTALL" ]; then
	cd $gsRepoDir/
	make clean
	autoreconf
	./configure
	make -j$gsProcessors
	make install
	install -v -o root -g root -m 0644 $MySB_InstallDir/templates/other/usr.local.etc.geoip.conf.tmpl /usr/local/etc/GeoIP.conf
	# Disable the upgrade job
	cmdMySQL 'MySB_db' "UPDATE repositories SET upgrade='0' WHERE name='GeoIPupdate';" -v
fi

#### Composer
gfnGetRepoValues 'Composer'
gfnRepoManageByType
chmod -v +x $gsRepoDir
sVersionInstalled="$(gfnCheckCommand 0 composer && composer --version 2> /dev/null | grep 'Composer version' | awk '{ print $3 }' || echo 'Not installed')"
sVersionLatest="$($binCURL $gsRepoURL | grep 'tag_name' | awk '{ print $2 }' | cut -d '"' -f 2)"
if [ "$sVersionInstalled" != "$sVersionLatest" ]; then
	gfnRepoManageByType
	chmod -v +x $gsRepoDir
	$gsRepoDir --version | grep 'Composer version'
fi
composer self-update

#### NodeJS
gfnGetRepoValues 'NodeJS' && gfnRepoManageByType
if [ $gnRepoUpgrade -eq 1 ] || [ "$gsSwitch" == "INSTALL" ]; then
	cd $gsRepoDir
	if [ -d out/ ]; then
		make clean
	fi
	./configure
	make -j$gsProcessors
	make install
	/sbin/ldconfig
	# Disable the upgrade job
	cmdMySQL 'MySB_db' "UPDATE repositories SET upgrade='0' WHERE name='NodeJS';" -v
fi

#### Python
echo
echo "########## Python"
# Update certificates for python
update-ca-certificates --fresh &> /dev/null
# Install PyOpenSSL for Python
pip install PyOpenSSL
pip3 install PyOpenSSL

#### Bower
echo
echo "########## Bower"
npm install -g npm-check-updates
npm install -g bower
bower update --allow-root

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################
