##################### FIRST LINE #####################################

#### Install packages
case "$gsDebianRelease" in
	'wheezy'|'jessie')
		gfnPackageBundleInstall "php5 php5-common php5-cli php5-fpm php5-curl php5-geoip php5-xmlrpc php5-gd php5-sqlite php5-mcrypt php5-mysql php5-intl php5-imagick php-xml-rss php5-redis php5-dev php5-imap php5-gmp php-pear"
		sPhpDir="/etc/php5"
	;;
	'stretch')
		gfnPackageBundleInstall "php php-common php-cli php-fpm php-curl php-geoip php-xmlrpc php-gd php-sqlite3 php-mcrypt php-mysql php-intl php-imagick php-xml php-redis php-dev php-imap php-gmp php-pear"
		gfnPackagesManage purge "apache2"
		sPhpDir="/etc/php/7.0"
	;;
esac

#### PECL
pecl channel-update pecl.php.net
case "$gsDebianRelease" in
	'wheezy'|'jessie')
		if [ ! -z "`pecl list | grep htscanner`" ]; then
			pecl uninstall htscanner
		fi
		if [ -z "`pecl list | grep htscanner`" ]; then
			pecl install htscanner
			echo "extension=htscanner.so" > $sPhpDir/mods-available/htscanner.ini
			php5enmod htscanner
		fi
	;;
esac
if [ ! -z "`pecl list | grep smbclient`" ]; then
	pecl uninstall smbclient
fi
if [ -z "`pecl list | grep smbclient`" ]; then
	pecl install smbclient
	echo "extension=smbclient.so" > $sPhpDir/mods-available/smbclient.ini
	php5enmod smbclient
fi

#### STOP services
gfnManageServices stop "$binPhpFpm"

case "$gsDebianRelease" in
	'wheezy'|'jessie')
		# $sPhpDir/fpm/pool.d/www.conf
		cp -v $MySB_InstallDir/templates/php/etc.php5.fpm.pool.d.www.conf.tmpl $sPhpDir/fpm/pool.d/www.conf
		# $sPhpDir/fpm/php.ini
		cp -v $MySB_InstallDir/templates/php/etc.php5.fpm.php.ini.tmpl $sPhpDir/fpm/php.ini
		# $sPhpDir/cli/php.ini
		cp -v $MySB_InstallDir/templates/php/etc.php5.cli.php.ini.tmpl $sPhpDir/cli/php.ini
	;;
	'stretch')
		# $sPhpDir/fpm/pool.d/www.conf
		cp -v $MySB_InstallDir/templates/php/etc.php.7.0.fpm.pool.d.www.conf.tmpl $sPhpDir/fpm/pool.d/www.conf
		# $sPhpDir/fpm/php.ini
		cp -v $MySB_InstallDir/templates/php/etc.php.7.0.fpm.php.ini.tmpl $sPhpDir/fpm/php.ini
		# $sPhpDir/cli/php.ini
		cp -v $MySB_InstallDir/templates/php/etc.php.7.0.cli.php.ini.tmpl $sPhpDir/cli/php.ini
	;;
esac

# TMPFS
sed -i '/TMPFS - PHP/d' /etc/fstab
sed -i '/\/mnt\/tmpFS\/php/d' /etc/fstab
echo "# TMPFS - PHP" >> /etc/fstab
echo "tmpfs   /mnt/tmpFS/php tmpfs defaults,nosuid,noatime,mode=1777,size=32M 0 0" >> /etc/fstab
if [ ! -d /mnt/tmpFS/php ]; then
	mkdir -pv /mnt/tmpFS/php
fi
if [ -z "`df -H | grep '/mnt/tmpFS/php'`" ]; then
	mount /mnt/tmpFS/php
fi

if gfnCheckCommand 0 geoipupdate; then geoipupdate; fi

#### START services
gfnManageServices start "$binPhpFpm"

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################