##################### FIRST LINE #####################################

#### VARs
TimeZoneEscaped="`echo $TimeZone | sed s,/,\\\\\\\\\\/,g`"

#### Install packages
PackagesManage install "php5 php5-common php5-cli php5-fpm php5-curl php5-geoip php5-xmlrpc php5-gd php5-sqlite php5-mcrypt php5-mysql php5-intl php5-imagick php-xml-rss php5-apcu php5-dev"

#### PECL
if [ ! -z "`pecl list | grep htscanner`" ]; then
	pecl uninstall htscanner
fi
if [ -z "`pecl list | grep htscanner`" ]; then
	pecl install htscanner
	echo "extension=htscanner.so" | tee -a /etc/php5/mods-available/htscanner.ini
	php5enmod htscanner
fi

#### STOP services
ManageServices stop "php5-fpm"

# /etc/php5/fpm/pool.d/www.conf
perl -pi -e "s/^;listen = 127.0.0.1:9000/listen = \/var\/run\/php5-fpm.sock/g" /etc/php5/fpm/pool.d/www.conf
perl -pi -e "s/^;listen.owner = www-data/listen.owner = www-data/g" /etc/php5/fpm/pool.d/www.conf
perl -pi -e "s/^;listen.group = www-data/listen.group = www-data/g" /etc/php5/fpm/pool.d/www.conf
perl -pi -e "s/^;listen.mode = 0660/listen.mode = 0660/g" /etc/php5/fpm/pool.d/www.conf
perl -pi -e "s/^;request_terminate_timeout = 0/request_terminate_timeout = 300/g" /etc/php5/fpm/pool.d/www.conf
# /etc/php5/fpm/php.ini
perl -pi -e "s/^expose_php = On/expose_php = Off/g" /etc/php5/fpm/php.ini
perl -pi -e "s/file_uploads = Off/file_uploads = On/g" /etc/php5/fpm/php.ini
perl -pi -e "s/post_max_size = 8M/post_max_size = 16M/g" /etc/php5/fpm/php.ini
perl -pi -e "s/upload_max_filesize = 2M/upload_max_filesize = 16M/g" /etc/php5/fpm/php.ini
perl -pi -e "s/^;date.timezone =/date.timezone = $TimeZoneEscaped/g" /etc/php5/fpm/php.ini
perl -pi -e "s/^;always_populate_raw_post_data/always_populate_raw_post_data/g" /etc/php5/fpm/php.ini
perl -pi -e "s/^;session.save_path = \"\/var\/lib\/php5\/sessions\"/session.save_path = \"\/mnt\/tmpFS\/php\"/g" /etc/php5/fpm/php.ini
# /etc/php5/cli/php.ini
perl -pi -e "s/^expose_php = On/expose_php = Off/g" /etc/php5/cli/php.ini
perl -pi -e "s/^;date.timezone =/date.timezone = $TimeZoneEscaped/g" /etc/php5/cli/php.ini
perl -pi -e "s/^;always_populate_raw_post_data/always_populate_raw_post_data/g" /etc/php5/cli/php.ini
perl -pi -e "s/session.save_path = \"\/var\/lib\/php5\/sessions\"/session.save_path = \"\/mnt\/tmpFS\/php\"/g" /etc/php5/cli/php.ini
# /etc/php5/mods-available
if [ -f /etc/php5/mods-available/apcu.ini.dpkg-dist ]; then
	if [ ! -z "`cat /etc/php5/mods-available/apcu.ini | grep 'apc.enable_cli'`" ]; then
		echo "apc.enable_cli=1" >> /etc/php5/mods-available/apcu.ini.dpkg-dist
	fi
	mv -v /etc/php5/mods-available/apcu.ini.dpkg-dist /etc/php5/mods-available/apcu.ini
fi
if [ -f /etc/php5/mods-available/geoip.ini.dpkg-dist ]; then mv -v /etc/php5/mods-available/geoip.ini.dpkg-dist /etc/php5/mods-available/geoip.ini; fi
if [ -f /etc/php5/mods-available/imagick.ini.dpkg-dist ]; then mv -v /etc/php5/mods-available/imagick.ini.dpkg-dist /etc/php5/mods-available/imagick.ini; fi

# TMPFS
sed -i '/TMPFS - PHP/d' /etc/fstab
sed -i '/\/mnt\/tmpFS\/php/d' /etc/fstab
echo "# TMPFS - PHP" >> /etc/fstab
echo "tmpfs   /mnt/tmpFS/php tmpfs defaults,nosuid,noatime,mode=1777,size=64M 0 0" >> /etc/fstab
if [ ! -d /mnt/tmpFS/php ]; then
	mkdir -pv /mnt/tmpFS/php
fi
if [ -z "`df -H | grep '/mnt/tmpFS/php'`" ]; then
	mount /mnt/tmpFS/php
fi

ScriptInvoke 'source' "$MySB_InstallDir/scripts/UpdateGeoIP.bsh" "INSTALL"

#### START services
ManageServices start "php5-fpm"

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################