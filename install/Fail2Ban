##################### FIRST LINE #####################################

if [ "$ToInstall_Fail2Ban" == "YES" ]; then
	#### VARs
	Switch="$1"

	#### Install packages
	if ! CheckCommand 0 fail2ban; then
		PackagesManage install "fail2ban"
	fi

	#### STOP services
	ManageServices stop "fail2ban"

	# jail.local
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.jail.local.tmpl /etc/fail2ban/jail.local
	# ownCloud
	if [ "$ToInstall_ownCloud" == "YES" ] || [ "$IsInstalled_ownCloud" == "YES" ]; then
		(
cat <<'EOF'

[owncloud]
enabled  	= true
port     	= <Port_HTTPS>
filter   	= owncloud
logpath  	= /home/owncloud/owncloud.log
EOF
		) >> /etc/fail2ban/jail.local
	fi
	sed -i 's/<Port_SSH>/'$Port_SSH'/g;' /etc/fail2ban/jail.local
	sed -i 's/<Port_HTTP>/'$Port_HTTP'/g;' /etc/fail2ban/jail.local
	sed -i 's/<Port_HTTPS>/'$Port_HTTPS'/g;' /etc/fail2ban/jail.local
	sed -i 's/<Port_FTP>/'$Port_FTP'/g;' /etc/fail2ban/jail.local
	sed -i 's/<Port_FTP_Data>/'$Port_FTP_Data'/g;' /etc/fail2ban/jail.local

	# fail2ban.conf
	sed -i 's/loglevel = 3/loglevel = 2/g;' /etc/fail2ban/fail2ban.conf

	# action.d
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.action.d.mail.conf.tmpl /etc/fail2ban/action.d/mail.conf
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.action.d.sendmail.conf.tmpl /etc/fail2ban/action.d/sendmail.conf
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.action.d.sendmail-buffered.conf.tmpl /etc/fail2ban/action.d/sendmail-buffered.conf
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.action.d.sendmail-whois.conf.tmpl /etc/fail2ban/action.d/sendmail-whois.conf
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.action.d.sendmail-whois-lines.conf.tmpl /etc/fail2ban/action.d/sendmail-whois-lines.conf

	# filter.d
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.filter.d.nginx-auth.conf.tmpl /etc/fail2ban/filter.d/nginx-auth.conf
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.filter.d.nginx-badbots.conf.tmpl /etc/fail2ban/filter.d/nginx-badbots.conf
	if [ "$IsInstalled_ownCloud" == "YES" ]; then
		sed -i 's/ignoreregex =/ignoreregex = .*\"GET \/(owncloud|remote.php).*/g;' /etc/fail2ban/filter.d/nginx-badbots.conf
	fi
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.filter.d.nginx-login.tmpl /etc/fail2ban/filter.d/nginx-login.conf
	cp -vf $MySB_InstallDir/templates/fail2ban/etc.fail2ban.filter.d.owncloud.tmpl /etc/fail2ban/filter.d/owncloud.conf

	#### Add white list
	Fail2BanWhitheList 0

	#### Disable init, Fail2Ban will be started by MySB_SecurityRules
	update-rc.d fail2ban remove -f

	if CheckCommand 0 fail2ban; then
		Func_SQL_Command 'UPDATE' 'MySB_db' 'services' "to_install = '0', is_installed = '1'" "serv_name = 'Fail2Ban'" '-echo'
	fi

	#### Create new security rules
	ScriptInvoke 'source' "$MySB_InstallDir/bin/MySB_SecurityRules" 'create' "$Switch"

	#### logrotate (to run after Security Rules)
	LogRotate 'fail2ban'
fi

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################