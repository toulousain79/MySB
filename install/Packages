##################### FIRST LINE #####################################

#### Packages list
MySB_Install_Packages="`grep -rni 'TOOLS=' $MySB_InstallDir/install/MySB_Install.bsh | cut -d '"' -f 2`"
PackagesList_Standard="sudo manpages-fr ntpdate ntp update-notifier-common debian-goodies gnupg-curl python3.2 bc bash-completion expect rsyslog lftp cksfv idn pcregrep valgrind pslib1 tcl8.5 redis-server whiptail"
PackagesList_Compress="rar unrar unzip zip"
PackagesList_Tools="htop iperf csvtool whois vim nano tcpdump sysbench"
PackagesList_Compil="cmake build-essential automake pkg-config"
PackagesList_Utils="bridge-utils debianutils coreutils mailutils"
PackagesList_ToPurge="heirloom-mailx"

case "$gsDebianRelease" in
	'wheezy')
		PackagesList_Standard="sudo manpages-fr ntpdate ntp update-notifier-common debian-goodies gnupg-curl bc bash-completion expect rsyslog lftp cksfv idn pcregrep valgrind pslib1 tcl8.5 redis-server whiptail"
		PackagesList_Lib="libtool libxml2-dev libsigc++-2.0-dev libncurses5-dev libxmlrpc-c3-dev libcppunit-dev libcurl4-openssl-dev libav-tools libio-socket-ssl-perl libhttp-daemon-ssl-perl libsmbclient-dev"
		PackagesList_Backports="subversion"
	;;
	'jessie')
		PackagesList_Standard="sudo manpages-fr ntpdate ntp update-notifier-common debian-goodies gnupg-curl python3.4 bc bash-completion expect rsyslog lftp cksfv idn pcregrep valgrind pslib1 tcl8.5 redis-server whiptail"
		PackagesList_Lib="libtool libxml2-dev libsigc++-2.0-dev libncurses5-dev libcppunit-dev libcurl4-openssl-dev libio-socket-ssl-perl libhttp-daemon-ssl-perl libsmbclient-dev libsystemd-dev"
		PackagesList_Backports="subversion libav-tools"
	;;
esac

# For update of sources list
cmdMySQL 'MySB_db' "UPDATE system SET apt_update = 1, apt_date = '`date +%Y-%m-%d\ %H:%M:%S`' WHERE id_system='1';" -v

#### Install packages (standard)
gfnPackageBundleInstall "$MySB_Install_Packages $PackagesList_Standard $PackagesList_Compress $PackagesList_Tools $PackagesList_Compil $PackagesList_Utils $PackagesList_Lib"

#### Install packages (Backports)
gfnPackageBundleInstall "$PackagesList_Backports" "backports"

#### Purge packages
gfnPackagesManage purge "$PackagesList_ToPurge"

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################