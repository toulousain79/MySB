##################### FIRST LINE #####################################

#### Packages list
MySB_Install_Packages="`grep -rni 'TOOLS=' $MySB_InstallDir/install/MySB_Install.bsh | cut -d '"' -f 2`"
PackagesList_Standard="sudo htop build-essential automake libtool manpages-fr pkg-config curl unzip zip iperf csvtool whois vim nano ntpdate ntp update-notifier-common debian-goodies bridge-utils libxml2-dev libsigc++-2.0-dev libncurses5-dev libxmlrpc-c3-dev libcppunit-dev gnupg-curl python debianutils coreutils mailutils bc tcpdump bash-completion libcurl4-openssl-dev expect rsyslog lftp cksfv libav-tools"

if ! CheckCommand 0 rar; then
	PackagesManage install "rar"
	if [ $? -gt 0 ]; then
		PackagesList_Standard="$PackagesList_Standard rar-free"
	fi
fi

if ! CheckCommand 0 unrar; then
	PackagesManage install "unrar"
	if [ $? -gt 0 ]; then
		PackagesList_Standard="$PackagesList_Standard unrar-free"
	fi
fi

#### Install packages (standard)
PackagesManage install "$MySB_Install_Packages $PackagesList_Standard"

#### Install packages (Backports)
PackagesManage install "subversion" "backports"

#### Purge packages
PackagesManage purge "heirloom-mailx"

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################