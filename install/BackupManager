##################### FIRST LINE #####################################

#### Install packages
gfnPackageBundleInstall "backup-manager"

#### Configuration file
install -v -o root -g root -m 0600 $MySB_InstallDir/templates/backup-manager/etc.backup-manager.conf.tmpl /etc/MySB/BM_MySB.conf
source /etc/MySB/config_db
perl -pi -e "s/<MySB_InstallDir>/$gsInstallDirEscaped/g" /etc/MySB/BM_MySB.conf
perl -pi -e "s/<MySQL_BackupManager>/$MySQL_BackupManager/g" /etc/MySB/BM_MySB.conf

#### Cron daily
#install -v -o root -g root -m 0755 $MySB_InstallDir/templates/backup-manager/etc.cron.daily.backup-manager.tmpl /etc/cron.daily/backup-manager

#### Tool
install -v -o root -g root -m 0755 $MySB_InstallDir/templates/backup-manager/usr.bin.backup-manager-tools.tmpl /usr/bin/backup-manager-tools

#### Scripts PRE and POST command
if [ ! -d $MySB_InstallDir/confs ]; then
	mkdir -p $MySB_InstallDir/confs
fi
install -v -o root -g root -m 0600 $MySB_InstallDir/templates/backup-manager/confs.bm_pre.sh.tmpl $MySB_InstallDir/confs/bm_pre.sh
install -v -o root -g root -m 0600 $MySB_InstallDir/templates/backup-manager/confs.bm_post.sh.tmpl $MySB_InstallDir/confs/bm_post.sh
perl -pi -e "s/<MySB_InstallDir>/$gsInstallDirEscaped/g" $MySB_InstallDir/confs/bm_post.sh

#### Creating backup directory if doesn't exist
if [ ! -d ${MySB_InstallDir}_backup ]; then
	mkdir -p ${MySB_InstallDir}_backup
fi

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################