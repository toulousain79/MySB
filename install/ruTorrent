#### Plugin Filemanager
PluginFilemanagerActive="`Func_SQL_Command 'SELECT' 'MySB_db' 'active' 'repositories' "name = 'ruTorrent Plugin FileManager'"`"
PluginFilemanagerDir=$MySB_InstallDir"`Func_SQL_Command 'SELECT' 'MySB_db' 'dir' 'repositories' "name = 'ruTorrent Plugin FileManager'"`"
PluginFilemanagerUrl="`Func_SQL_Command 'SELECT' 'MySB_db' 'url' 'repositories' "name = 'ruTorrent Plugin FileManager'"`"
PluginFilemanagerFile="`Func_SQL_Command 'SELECT' 'MySB_db' 'file' 'repositories' "name = 'ruTorrent Plugin Filemanager'"`"
PluginFilemanagerVersion="`Func_SQL_Command 'SELECT' 'MySB_db' 'version' 'repositories' "name = 'ruTorrent Plugin Filemanager'"`"
echo
echo "########## Plugin Filemanager"
echo "Directory : "$PluginFilemanagerDir
echo "Active : "`echo $PluginFilemanagerActive | sed 's/0/NO/g;' | sed 's/1/YES/g;'`
echo "Version : "$PluginFilemanagerVersion
echo "File : "$PluginFilemanagerFile
echo "URL : "$PluginFilemanagerUrl
echo
if [ "$PluginFilemanagerActive" == "1" ]; then
	if [ -d $PluginFilemanagerDir ]; then
		svn up --non-interactive --trust-server-cert $PluginFilemanagerDir
		if [ $? -gt 0 ]; then
			svn switch $PluginFilemanagerUrl $PluginFilemanagerDir
		fi
	else
		if [ -f $MySB_InstallDir/files/$PluginFilemanagerFile ]; then
			unzip $MySB_InstallDir/files/$PluginFilemanagerFile -d $MySB_InstallDir/temp/
			SubDir="`unzip -l $MySB_InstallDir/files/$PluginFilemanagerFile | awk '{ print $4 }' | cut -d '/' -f 1 | uniq | sed '1,3d;$d'`"
