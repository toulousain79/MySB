				mv -v $MySB_InstallDir/temp/$SubDir $PluginFilemanagerDir
			fi
			if [ -d $PluginFilemanagerDir/.svn ]; then
				svn up --non-interactive --trust-server-cert $PluginFilemanagerDir
				if [ $? -gt 0 ]; then
					svn switch $PluginFilemanagerUrl $PluginFilemanagerDir
				fi
			fi
		else
			svn co --non-interactive --trust-server-cert $PluginFilemanagerUrl $PluginFilemanagerDir
		fi
	fi
	sed -i "/'rar'/s/'';/'\/usr\/bin\/rar';/g" $PluginFilemanagerDir/conf.php
	sed -i "/'zip'/s/'';/'\/usr\/bin\/zip';/g" $PluginFilemanagerDir/conf.php
	sed -i "/'unzip'/s/'';/'\/usr\/bin\/unzip';/g" $PluginFilemanagerDir/conf.php
	sed -i "/'tar'/s/'';/'\/bin\/tar';/g" $PluginFilemanagerDir/conf.php
	if [ "`cat $PluginFilemanagerDir/conf.php | grep "\$pathToExternals\['bzip2'\]"`" == "" ]; then
		NumLign=$(sed -n "/'\/bin\/tar'/=" $PluginFilemanagerDir/conf.php)
		(( NumLign++ ))
		sed -i "${NumLign}i\$pathToExternals['bzip2'] = '\/bin\/bzip2';" $PluginFilemanagerDir/conf.php
	fi
else
	DeleteDirectory 1 "$PluginFilemanagerDir"
fi

