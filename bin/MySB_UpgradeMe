##################### FIRST LINE #####################################

#### Update actual repo
ScriptInvoke 'source' '/etc/MySB/bin/MySB_UpdateGitHubRepo'

#### Check if new version
MySB_NewVersion="`cat /etc/MySB/version`"

if [ "$MySB_CurrentVersion" == "$MySB_NewVersion" ]; then
	echo
	echo -e "${CGREEN}MySB is up to date !$CEND"
	echo
	EndingScript 0
else
	echo
	echo -e "${CYELLOW}MySB$CEND ${CGREEN}$MySB_NewVersion$CEND ${CYELLOW}is avaible !$CEND"
	echo -e "${CYELLOW}Do you want to continue and upgrade MySB to $CEND${CGREEN}$MySB_NewVersion$CEND ${CYELLOW}?$CEND"
	echo
	QuestionGetString NO  "Type 'yes' to continue or 'no' to abort ?" CONTINUE NO
	if [ "$CONTINUE" == "NO" ]; then
		EndingScript 0
	fi
fi

#### Backup
DateTime="`/bin/date +%Y%m%d-%H%M%S`"
echo -e "${CBLUE}Create backup files '/etc/MySB/upgrade/backup/Backup-$DateTime-$MySB_CurrentVersion.tar.gz'$CEND"
echo -e -n "${CRED}Please wait $CEND"
for ((i = 5; i >= 0; i -= 1)); do
	echo -n " $i"
	sleep 1
done
echo
if [ ! -d /etc/MySB/upgrade/backup ]; then
	mkdir -p /etc/MySB/upgrade/backup
fi
mv -v /etc/MySB/upgrade/backup /tmp/MySB_backup_$DateTime
tar -zcvf /tmp/MySB_backup_$DateTime/Backup-$DateTime-$MySB_CurrentVersion.tar.gz /etc/MySB
mv -v /tmp/MySB_backup_* /etc/MySB/upgrade/backup

#### MySB Script GitHub
echo
echo -e "${CBLUE}Merge MySB to $MySB_NewVersion$CEND"
echo -e -n "${CRED}Please wait $CEND"
for ((i = 5; i >= 0; i -= 1)); do
	echo -n " $i"
	sleep 1
done
echo
cd /etc/MySB/
git fetch --all
git stash
git checkout -b $MySB_NewVersion origin/$MySB_NewVersion
git pull

#### Update version info
sqlite3 -echo $MySB_DB "UPDATE system SET mysb_version = '$MySB_NewVersion' WHERE id_system = '1';"
rm -vf /etc/MySB/files/banner_*

#### Completing the upgrade
if [ -f /etc/MySB/upgrade/From_$MySB_CurrentVersion-to-$MySB_NewVersion.bsh ]; then
	echo
	echo -e "${CBLUE}Upgrade system$CEND"
	echo -e "${CYELLOW}During the update of some packages, questions may be asked to you. Leave the default choice, and press the Enter key.$CEND"
	echo -e -n "${CRED}Please wait $CEND"
	for ((i = 10; i >= 0; i -= 1)); do
		echo -n " $i"
		sleep 1
	done
	echo
	
	#### Upgrade System
	ScriptInvoke 'bash' '/etc/MySB/bin/MySB_UpgradeSystem'
	/usr/sbin/ntpdate 0.fr.pool.ntp.org &> /dev/null 2>&1
	
	clear
	echo -e "${CBLUE}Starting SCREEN session...$CEND"
	screen -wipe &> /dev/null
	screen -dmS MySB_UpgradeMe /bin/bash /etc/MySB/upgrade/From_$MySB_CurrentVersion-to-$MySB_NewVersion.bsh;
	echo -e -n "${CRED}Please wait $CEND"
	for ((i = 5; i >= 0; i -= 1)); do
		echo -n " $i"
		sleep 1
	done
	
	screen -r MySB_UpgradeMe
else
	echo ""
	echo ""
	echo -e "${CRED}Upgrade script does not exist (/etc/MySB/upgrade/From_$MySB_CurrentVersion-to-$MySB_NewVersion.bsh), aborting...$CEND"	
	EndingScript 0
fi

#### Finished
clear
echo -e "${CGREEN}Upgrade finished succesfully !$CEND"
echo

# -----------------------------------------
source /etc/MySB/inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################