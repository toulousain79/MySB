##################### FIRST LINE #####################################

#### Check GitHub access (switch DNS if needed)
log_daemon_msg "$GitHubRepoUpdate_CheckAccess"
Swithing=0
ping -c2 github.com > /dev/null 2>&1
if [ $? -gt 0 ]; then
	SwitchDNS "bind"
	Swithing=1
fi
StatusLSB

#### change working directory
cd $MySB_InstallDir/

#### update Git Hub
echo
git stash
git pull
echo

#### DEV - To force an upgrade
if [ -f $MySB_InstallDir/temp/dev ]; then
	NextVersionUpgrade="`cat $MySB_InstallDir/temp/dev`"
	if [ ! -z "$NextVersionUpgrade" ]; then
		echo "$NextVersionUpgrade" > $MySB_InstallDir/version
	fi
fi

#### Create directories & change rights
log_daemon_msg "$Global_OwnerAndRights"
source $MySB_InstallDir/inc/vars
ManageDirectoriesAndFiles 'no_user'
StatusLSB

#### Delete Bad Sources
source $MySB_InstallDir/inc/funcs_by_script/funcs_SourcesList
DeleteBadSources

#### Switch DNS to DNScrypt-proxy if available
if [ $Swithing -eq 1 ] && [ "$IsInstalled_DNScrypt" == "YES" ] && [ "$DNScrypt_Switch" == "1" ]; then
	log_daemon_msg "$GitHubRepoUpdate_RestoreDNS"
	cp $MySB_InstallDir/templates/init/etc.init.dnscrypt-proxy.tmpl /etc/init.d/dnscrypt-proxy
	chmod +x /etc/init.d/dnscrypt-proxy
	SwitchDNS "dnscrypt"
	StatusLSB
fi

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################
