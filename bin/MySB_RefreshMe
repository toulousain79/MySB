##################### FIRST LINE #####################################
#
# Usage:	MySB_RefreshMe (rtorrent|rutorrent|manager|cakebox|loadavg|all)
#
##################### FIRST LINE #####################################

if [ "$USAGE" == "ON" ]; then
	if [ "`screen -ls | grep MySB_RefreshMe`" == "" ]; then
		if [ ! $1 ]; then
			echo -e "$RefreshMe_Usage"
			EndingScript 0
		fi
	fi
fi

# Check by arguments
for Arg in "$@"; do
	case "$Arg" in
		REFRESH|UPGRADE)
			LocSwitch=$Arg
		;;
	esac
done

Choice="`echo $1 | tr '[:upper:]' '[:lower:]'`"

#### some functions
refresh_tools() {
	echo -e -n "${CBLUE}$RefreshMe_UpdateTools$CEND..."
	ScriptInvoke 'ScreenWAIT' "$MySB_InstallDir/install/Tools" "$LocSwitch"
	StatusSTD
}

refresh_manager() {
	if [ "$IsInstalled_Manager" == "YES" ] || [ "$ToInstall_Manager" == "YES" ]; then
		Func_SQL_Command 'UPDATE' 'MySB_db' 'services' "to_install = '1'" "serv_name = 'Seedbox-Manager'"
		echo -e -n "${CBLUE}$RefreshMe_UpdateManager$CEND..."
		ScriptInvoke 'ScreenWAIT' "$MySB_InstallDir/install/SeedboxManager" "$LocSwitch"
		StatusSTD
	else
		echo
		echo -e "$RefreshMe_MessageManager"
		echo
	fi
}

refresh_cakebox() {
	if [ "$IsInstalled_Cakebox" == "YES" ] || [ "$ToInstall_Cakebox" == "YES" ]; then
		echo -e -n "${CBLUE}$RefreshMe_UpdateCakebox$CEND..."
		Func_SQL_Command 'UPDATE' 'MySB_db' 'services' "to_install = '1'" "serv_name = 'CakeBox-Light'"
		ScriptInvoke 'ScreenWAIT' "$MySB_InstallDir/install/CakeboxLight" "$LocSwitch"
		StatusSTD
	else
		echo
		echo -e "$RefreshMe_MessageCakebox"
		echo
	fi
}

refresh_rtorrent() {
	echo -e -n "${CBLUE}$RefreshMe_UpdaterTorrent$CEND..."
	ScriptInvoke 'ScreenWAIT' "$MySB_InstallDir/install/rTorrent" "$LocSwitch"
	StatusSTD
}

refresh_rutorrent() {
	echo -e -n "${CBLUE}$RefreshMe_UpdateruTorrent$CEND..."
	ScriptInvoke 'ScreenWAIT' "$MySB_InstallDir/install/ruTorrent" "$LocSwitch"
	StatusSTD
}

refresh_loadavg() {
	echo -e -n "${CBLUE}$RefreshMe_UpdateLoadAvg$CEND..."
	ScriptInvoke 'ScreenWAIT' "$MySB_InstallDir/install/LoadAvg" "$LocSwitch"
	StatusSTD
}

#### do job
case "$Choice" in
	"rtorrent")
		refresh_rtorrent
	;;
	"rutorrent")
		refresh_rutorrent
	;;
	"manager"|"cakebox")
		#### Tools for CakeBox and Seedbox-Manager
		if [ "$IsInstalled_Cakebox" == "YES" ] || [ "$IsInstalled_Manager" == "YES" ] || [ "$ToInstall_Cakebox" == "YES" ] || [ "$ToInstall_Manager" == "YES" ]; then
			refresh_tools
		fi

		if [ "$Choice" == "cakebox" ]; then
			refresh_cakebox
		fi

		if [ "$Choice" == "manager" ]; then
			refresh_manager
		fi
	;;
	"loadavg")
		refresh_loadavg
	;;
	"$Global_ALL")
		refresh_rtorrent

		refresh_rutorrent

		refresh_loadavg

		if [ "$IsInstalled_Cakebox" == "YES" ] || [ "$IsInstalled_Manager" == "YES" ] || [ "$ToInstall_Cakebox" == "YES" ] || [ "$ToInstall_Manager" == "YES" ]; then
			refresh_tools
		fi

		refresh_manager

		refresh_cakebox
	;;
	*)
		echo -e "$RefreshMe_Usage"
	;;
esac

ManageDirectoriesAndFiles 'global'

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################