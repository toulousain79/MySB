#
# Usage:	MySB_ChangeUserPassword <username> <password>
#
##################### FIRST LINE #####################################

if [ "$USAGE" == "ON" ]; then
	if [ "`screen -ls | grep MySB_CreateUser`" == "" ]; then
		if [ -z $1 ] || [ -z $2 ]; then
			ListingUsers
			for seedUser in $UsersList; do
				LIST="$LIST|$seedUser"
			done
			LIST="`echo \($LIST\) | sed -e 's/(|/(/g;'`"

			echo -e "${CBLUE}$ChangeUserPassword_Usage_0$CEND	${CYELLOW}$ScriptName$CEND ${CGREEN}$ChangeUserPassword_Usage_1$CEND"
			if [ ! -z $LIST ]; then
				echo -e "${CBLUE}$ChangeUserPassword_Usage_2$CEND${CYELLOW}$LIST$CEND"
			fi
			EndingScript 0 0
		fi
		
		NewUser=$1
		NewUserPassword=$2
		Switch="MANUAL"
	fi
else
	NewUser=$1
	NewUserPassword=$2
	Switch=$3
fi

#### System
log_daemon_msg "$ChangeUserPassword_ChangePass [$NewUser]"
echo -e "$NewUserPassword\\n$NewUserPassword" | passwd $NewUser &> /dev/null
StatusLSB

#### Samba
if [ "$IsInstalled_Samba" == "YES" ] && [ -f /etc/samba/smb.conf ]; then
	log_daemon_msg "$ChangeUserPassword_SambaAccount [$NewUser]"
	echo -e "$NewUserPassword\n$NewUserPassword" | smbpasswd -s -a $NewUser &> /dev/null
	StatusLSB
fi

#### NginX	
log_daemon_msg "$ChangeUserPassword_WebServer [$NewUser]"
htpasswd -bs /etc/nginx/passwd/MySB $NewUser $NewUserPassword &> /dev/null
StatusLSB

#### ownCloud
if [ "$IsInstalled_ownCloud" == "YES" ]; then
	log_daemon_msg "$ChangeUserPassword_ownCloud [$NewUser]"
	UserExist="`Func_SQL_Command 'SELECT' 'ownCloud_db' 'uid' 'oc_users' "uid='$NewUser'"`"
	if [ -z "$UserExist" ]; then # Add the user
		ownCloudAccountManage 'create' "$NewUser" "$NewUserPassword"
		Func_SQL_Command 'UPDATE' 'MySB_db' 'users' "init_password = '1'" "users_ident = '$NewUser'"
	else # Update the user
		if [ "$ScriptName" != "MySB_CreateUser" ]; then
			ownCloudAccountManage 'edit' "$NewUser" "$NewUserPassword"
		fi
	fi
	unset UserExist
	StatusLSB
fi

#### RPC
log_daemon_msg "$ChangeUserPassword_RpcPass [$NewUser]"
if [ ! -f /etc/nginx/passwd/MySB_$NewUser ]; then
	touch /etc/nginx/passwd/MySB_$NewUser
fi
chmod 640 /etc/nginx/passwd/MySB_$NewUser
chown www-data:www-data /etc/nginx/passwd/MySB_$NewUser
htpasswd -bs /etc/nginx/passwd/MySB_$NewUser $NewUser $NewUserPassword &> /dev/null
StatusLSB

#### Change Home User Rights
log_daemon_msg "$ChangeUserPassword_ConfirmRights [$NewUser]"
ManageDirectoriesAndFiles 'global'
StatusLSB

#### ruTorrent Stream Plugin password
if [ -f $RutorrentDir/conf/users/$UserToCreate/plugins/stream/config.php ]; then
	log_daemon_msg "$ChangeUserPassword_StreamPlugin [$NewUser]"
	SEARCH=$(cat $RutorrentDir/conf/users/$NewUser/plugins/stream/config.php | grep '$auth' | awk '{ print $3 }'| cut -d "'" -f 2)
	if [ -z $SEARCH ]; then
		perl -pi -e "s/$auth = '';/$auth = '$NewUser\:$NewUserPassword';/g" $RutorrentDir/conf/users/$NewUser/plugins/stream/config.php
		StatusLSB
	else
		perl -pi -e "s/$SEARCH/$NewUser\:$NewUserPassword/g" $RutorrentDir/conf/users/$NewUser/plugins/stream/config.php
		StatusLSB
	fi
fi

#### send infos by mail to user
if [ ! -z "$MainUserEmail" ]; then
	UserLanguage="`Func_SQL_Command 'SELECT' 'MySB_db' 'language' 'users' "users_ident = '$NewUser'"`"
	if [ -f $MySB_InstallDir/inc/lang/$UserLanguage/MySB_ChangeUserPassword.lng ]; then
		source $MySB_InstallDir/inc/lang/$UserLanguage/MySB_ChangeUserPassword.lng
	else
		if [ -f $MySB_InstallDir/inc/lang/en/MySB_ChangeUserPassword.lng ]; then
			source $MySB_InstallDir/inc/lang/en/MySB_ChangeUserPassword.lng
		fi
	fi

	if [ "$ScriptName" == "MySB_CreateUser" ]; then
		Subject="$CreateUser_SubjectAccountCreated [$NewUser]"
		Message="$CreateUser_MessageAccountCreated"
		Case="account_created"
	else
		if [ "$Switch" == "UPGRADE" ]; then
			Subject="$ChangeUserPassword_SubjectUpgraded $MySB_CurrentVersion"
			Message="$ChangeUserPassword_MessageUpgraded"
			Case="upgrade"
		else
			Subject="$ChangeUserPassword_SubjectPassChanged [$NewUser]"
			Message="$ChangeUserPassword_MessagePassChanged"
			Case="account_confirmed"
			Func_SQL_Command 'UPDATE' "MySB_db" 'users' "users_passwd = ''" "users_ident = '$NewUser'"
		fi
	fi

	SendMail "$Subject" "$NewUser" "$Case" "$Message"
fi

#### START services
case "$Switch" in
	"MANUAL"|"APPLYCONFIG")
		ManageServices start "nginx"
	;;
esac

#### Disable init password
Func_SQL_Command 'UPDATE' "MySB_db" 'users' "init_password = '0'" "users_ident = '$NewUser'"

#### Change Home User Rights
log_daemon_msg "$ChangeUserPassword_ConfirmRights [$NewUser]"
ManageDirectoriesAndFiles 'user'
StatusLSB

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
# -----------------------------------------
##################### LAST LINE ######################################