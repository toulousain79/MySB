##################### FIRST LINE #####################################

#### VARs
get_base_path="$1"
get_custom1="$2"
get_name="$3"
UserName="<username>"
Timestamp="`/bin/date +%Y%m%d%H%M%S`"
if [ -z "`getent passwd $UserName`" ] || [ -z "$get_base_path" ] || [ -z "$get_custom1" ] || [ -z "$get_name" ]; then
	exit 0
fi

#### LanguageTransfert vers le NAS terminé
EnvLang="`echo ${LANG:0:2}`"
Lang_French() {
	Readme_AvailableVariables="Variables disponibles:
\"\$get_base_path\"	--> Emplacement initial du téléchargement.
\"\$get_custom1\"	--> Nouvelle arborescence du téléchargement.
\"\$get_name\"		--> Nom du téléchargement.

Pour envoyer un mail à partir de votre script, vous pouvez utiliser la commande suivante:
	subject=\"MySB - Transfert vers le NAS terminé !\"
	curl --data \"username=$UserName&get_base_path=$get_base_path&get_custom1=$get_custom1&get_name=$get_name&subject=$subject\" http://localhost:8888/rTorrent.php"
}
Lang_English() {
	Readme_AvailableVariables="Available variables:
\"\$get_base_path\"	--> Initial download location.
\"\$get_custom1\"	--> New tree download.
\"\$get_name\"		--> Download name.

To send mail from your script, you can use the following command:
	subject=\"MySB - NAS transfer finished !\"
	curl --data \"username=$UserName&get_base_path=$get_base_path&get_custom1=$get_custom1&get_name=$get_name&subject=$subject\" http://localhost:8888/rTorrent.php"
}
case "$EnvLang" in
	fr)
		Lang_French
	;;
	*)
		Lang_English
	;;
esac

#### Moving download
mv -u $get_base_path $get_custom1

#### Execute PHP command (Mail notification + ownCloud CRON)
curl --data "username=$UserName&get_base_path=$get_base_path&get_custom1=$get_custom1&get_name=$get_name" http://localhost:8888/rTorrent.php

#### Creating README file
echo "$Readme_AvailableVariables" > /home/$UserName/scripts/README

#### Execute user scripts
UserScripts="`ls -A1 /home/$UserName/scripts/ | grep '.sh'`"
if [ ! -z "$UserScripts" ]; then
	for Script in $UserScripts; do
		/usr/bin/screen -dmS elohim13_$Timestamp /bin/bash /home/$UserName/scripts/$Script "$get_base_path" "$get_custom1" "$get_name"; >> $LogFile;
	done
fi

