######################################################################

## Check if user exist
if [ -z "$(getent passwd "${gsUsername}")" ]; then
    echo "User ${gsUsername} does not exist !"
    exit 0
fi

## Create log file
if ! [ -e "${gsLogFile}" ]; then
    touch "${gsLogFile}"
fi

## Sync DB
if [ ! -f "${gsHomeDir}"/db/"${gsUsername}".sq3 ]; then
    cp "${MySB_InstallDir}/db/Sync.tmpl.sq3" "${gsHomeDir}"/db/"${gsUsername}".sq3
    chmod -R 0770 "${gsHomeDir}"/db
    chown -R ${gsUsername}:www-data "${gsHomeDir}"/db
fi

## /run/rtorrent
[ ! -d /run/rtorrent ] && install -v -o root -g mysb_users -m 0775 -d /run/rtorrent

## Options
case "$1" in
    'start')
        log_daemon_msg "Starting ${gsBinRtorrentDesc}" "${gsBinRtorrent}"
        gfnRtorrentStart
        case "$?" in
            0)
                echo "START: $(/bin/date '+%Y-%m-%d - %H:%M:%S')" >>"${gsLogFile}"
                gfnRtorrentCreatePidFile
                cmdMySQL 'MySB_db' "UPDATE users SET rtorrent_restart='0' WHERE users_ident='${gsUsername}';"
                gfnInotifyStart
                log_end_msg 0
                ;;
            1)
                echo "Already running: $(/bin/date '+%Y-%m-%d - %H:%M:%S')" >>"${gsLogFile}"
                gfnRtorrentCreatePidFile
                gfnInotifyStart
                log_end_msg 0
                ;;
            2)
                echo "Could not be started: $(/bin/date '+%Y-%m-%d - %H:%M:%S')" >>"${gsLogFile}"
                gfnRtorrentStop
                gfnInotifyStop
                gfnCleanAll
                log_end_msg 1
                ;;
        esac
        ;;
    'stop')
        log_daemon_msg "Stopping ${gsBinRtorrentDesc}" "${gsBinRtorrent}"
        gfnDoCrontab 'remove'
        gfnRtorrentStop
        case "$?" in
            0)
                echo "STOP: $(/bin/date '+%Y-%m-%d - %H:%M:%S')" >>"${gsLogFile}"
                log_end_msg 0
                ;;
            1)
                echo "Already stopped: $(/bin/date '+%Y-%m-%d - %H:%M:%S')" >>"${gsLogFile}"
                log_end_msg 0
                ;;
            2)
                echo "Could not be stopped, the process was killed: $(/bin/date '+%Y-%m-%d - %H:%M:%S')" >>"${gsLogFile}"
                log_end_msg 1
                ;;
        esac
        gfnInotifyStop
        gfnCleanAll
        ;;
    'restart')
        log_daemon_msg "Restarting ${gsBinRtorrentDesc}" "${gsBinRtorrent}"
        gfnInotifyStop
        gfnRtorrentStop
        case "$?" in
            0) gfnRestartStopCase ;;
            1)
                gfnRtorrentStop
                gfnRestartStopCase
                ;;
        esac
        ;;
    'reload')
        log_daemon_msg "Reloading ${gsBinRtorrentDesc} configuration" "${gsBinRtorrent}"
        gfnDoReload
        log_end_msg $?
        ;;
    'status')
        status_of_proc -p "${gsPidScreen}" "${binScreen}" "Screen for rTorrent"
        status_of_proc -p "${gsPidRtorrent}" "${binRtorrent}" "${gsBinRtorrent}"
        status_of_proc -p "${gsPidInotify}" "${binScreen}" "Screen for ${gsInotifyScript}"
        exit 0
        ;;
    *)
        echo "Usage: service rtorrent-${gsUsername} {start|stop|restart|reload|status}"
        exit 3
        ;;
esac

######################################################################
#
# E N D   C O M M A N D   L I N E   M O D E
#
######################################################################

exit 0

