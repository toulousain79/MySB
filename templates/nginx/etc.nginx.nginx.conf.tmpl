user www-data;
worker_processes auto;

pid /var/run/nginx.pid;

events {
	worker_connections 10240;
	multi_accept on;
}

http {
	#### LOG
	error_log /var/log/nginx/error.log error;
	access_log /var/log/nginx/access.log combined;

	#### useful for multi-servers
	add_header X-Server $hostname;

	#### ngx_http_ssl_module
	ssl_buffer_size 4k;
	ssl_certificate <InstallDir>/ssl/nginx.cert;
	ssl_certificate_key <InstallDir>/ssl/nginx.key;
	ssl_ciphers ECDH+AESGCM:DH+AESGCM:ECDH+AES256:DH+AES256:ECDH+AES128:DH+AES:ECDH+3DES:DH+3DES:RSA+AESGCM:RSA+AES:RSA+3DES:!aNULL:!MD5:!DSS;
	ssl_prefer_server_ciphers on;
	ssl_protocols TLSv1 TLSv1.1 TLSv1.2; # Dropping SSLv3, ref: POODLE
	ssl_session_cache shared:SSL:1m;
	ssl_session_timeout 10m;

	#### ngx_http_core_module
	expires 10m;
	default_type application/octet-stream;
	keepalive_disable msie6;
	keepalive_requests 100;
	keepalive_timeout 70;
	log_not_found on;
	sendfile on;
	server_tokens off;
	tcp_nodelay on;
	tcp_nopush on;
	types_hash_max_size 2048;
	server_names_hash_bucket_size 64;
	server_name_in_redirect off;

	#### PageSpeed
	# Turning the module on and off
	pagespeed on;
	# Configuring PageSpeed Filters (PassThrough, CoreFilters, or OptimizeForBandwidth)
	pagespeed RewriteLevel OptimizeForBandwidth;
	# Needs to exist and be writable by nginx.  Use tmpfs for best performance.
	pagespeed FileCachePath "/usr/share/nginx/pagespeed";
	pagespeed FileCacheSizeKb            102400;
	pagespeed FileCacheCleanIntervalMs   3600000;
	pagespeed FileCacheInodeLimit        500000;
	pagespeed LRUCacheKbPerProcess     8192;
	pagespeed LRUCacheByteLimit        16384;
	# More filters
	pagespeed EnableFilters remove_quotes;
	pagespeed EnableFilters remove_comments;
	pagespeed EnableFilters combine_heads;
	pagespeed EnableFilters move_css_to_head;
	pagespeed EnableFilters rewrite_css;
	# Disabled for ownCloud
	#pagespeed EnableFilters defer_javascript;

	# PageSpeed GZIP
	pagespeed FetchWithGzip on;
	gzip on;
	gzip_vary on;
	gzip_types application/ecmascript;
	gzip_types application/javascript;
	gzip_types application/json;
	gzip_types application/pdf;
	gzip_types application/postscript;
	gzip_types application/x-javascript;
	gzip_types image/svg+xml;
	gzip_types text/css;
	gzip_types text/csv;
	gzip_types text/javascript;
	gzip_types text/plain;
	gzip_types text/xml;
	gzip_http_version 1.0;
	# Disable for IE < 6 because there are some known problems
	gzip_disable "MSIE [1-6].(?!.*SV1)";

	#### Incudes
	include /etc/nginx/mime.types;
	include /etc/nginx/sites-enabled/*;
}
