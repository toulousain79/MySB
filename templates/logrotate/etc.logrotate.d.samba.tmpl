/var/log/samba/log.smbd {
	weekly
	missingok
	rotate 7
	postrotate
		/etc/init.d/samba reload > /dev/null
	endscript
	compress
	delaycompress
	notifempty
}

/var/log/samba/log.nmbd {
	weekly
	missingok
	rotate 7
	postrotate
		[ ! -f /var/run/samba/nmbd.pid ] || kill -HUP `cat /var/run/samba/nmbd.pid`
	endscript
	compress
	delaycompress
	notifempty
}
