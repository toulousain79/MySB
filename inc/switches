##################### FIRST LINE #####################################

#### SWITCHES
BANNER=ON		# Banner for all script (ON/OFF)
LOGSTD=NO		# Standard Outpout redirected to 'scriptname.log' (STDOUT/NO)
USAGE=ON		# All usage display to user, like questions (ON/OFF)
END=OFF			# Launch some commands at the end (ldconfig, updatedb, drop cache, mandb) (see includes_after) (ON/OFF)
TIMESTAMP=OFF	# Adds a time stamp at the beginning and end of the script in the logs (ON/OFF)

# Check by script name BEFORE arguments (to force switches)
case "$gsScriptName" in
	ApplyConfig.bsh) # Launched by ApplyConfig.bsh (web)
		BANNER=OFF
		LOGSTD=NO
		USAGE=OFF
		END=OFF
		TIMESTAMP=OFF
	;;
esac

# Check by arguments
for Arg in "$@"; do
	case "$Arg" in
		INSTALL|REFRESH)
			BANNER=OFF
			LOGSTD=STDOUT
			USAGE=OFF
			END=ON
			TIMESTAMP=ON
			gsSwitch="$Arg"
		;;
		UPGRADE)
			BANNER=OFF
			LOGSTD=STDOUT
			USAGE=OFF
			END=ON
			TIMESTAMP=ON
			gsSwitch="$Arg"
		;;
		CRON|APPLYCONFIG|INIT|SCREEN)
			BANNER=OFF
			LOGSTD=STDOUT
			USAGE=OFF
			END=OFF
			TIMESTAMP=ON
			gsSwitch="$Arg"
		;;
		*)
			gsSwitch="$Arg"
		;;
	esac
done

# Check by script name AFTER arguments (to reassigne switches again if needed)
case "$gsScriptName" in
	MySB_UpgradeMe|DynamicAddressResolver.bsh) # Maybe used with CRON args
		TIMESTAMP=OFF
		END=OFF
	;;
	PaymentReminder.bsh)
		BANNER=OFF
		LOGSTD=NO
		USAGE=OFF
		END=OFF
		TIMESTAMP=OFF
	;;
	PeerGuardian.bsh)
		for Arg in "$@"; do
			case "$Arg" in
				check)
					TIMESTAMP=OFF
				;;
			esac
		done
	;;
	NextCloud.bsh|'.rTorrent.bsh')
		TIMESTAMP=OFF
	;;
	MySB.bsh) # Install ?
		BANNER=ON
		LOGSTD=NO
		USAGE=ON
		END=ON
		TIMESTAMP=OFF
		sleep 10
	;;
	From_*) # Upgrade ?
		BANNER=ON
		LOGSTD=NO
		USAGE=ON
		END=OFF
		TIMESTAMP=OFF
		[ -z "$EnvLang" ] && EnvLang="en"

		#### update Git Hub
		cd $MySB_InstallDir/
		gsCurrentVersion="v4.2"
		sleep 10
	;;
	Questions)
		BANNER=ON
		LOGSTD=NO
		USAGE=ON
		END=OFF
		TIMESTAMP=OFF
	;;
	MySB_Install.bsh)
		BANNER=ON
		LOGSTD=NO
		USAGE=ON
		TIMESTAMP=ON
		END=OFF
	;;
esac

##################### LAST LINE ######################################