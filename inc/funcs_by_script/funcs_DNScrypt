funcs_DNScrypt=1
##################### FIRST LINE #####################################

#### VARs
DNScryptSigPubkey="RWQf6LRCGA9i53mlYecO4IzT51TGPpvWucNSCh1CBM0QTaLn73Y7GFO3"

#### DNScrypt Resolvers
DNScrypt_ResolversRenew() {
	case "$ScriptName" in
		MySB_GitHubRepoUpdate)
			DisplayCMD='-f'
			DisplaySQL=''
		;;
		*)
			DisplayCMD='-fv'
			DisplaySQL='-echo'
		;;
	esac

	# Download new resolvers CSV list
	ResolversCsvUrl="https://download.dnscrypt.org/dnscrypt-proxy/dnscrypt-resolvers.csv"
	ResolversCsvFile="/usr/local/share/dnscrypt-proxy/dnscrypt-resolvers.csv"
	ResolversCsvFileTmp="${ResolversCsvFile}.tmp"
	ResolversSigUrl="${ResolversCsvUrl}.minisig"
	curl --retry 2 -kSL "$ResolversCsvUrl" -o "$ResolversCsvFileTmp"
	if [ $? -eq 0 ]; then
		if $(which minisign > /dev/null 2>&1); then
			curl --retry 2 -kSL -o "$ResolversCsvFileTmp.minisig" "$ResolversSigUrl"
			minisign -V -P "$DNScryptSigPubkey" -m "$ResolversCsvFileTmp"
			#mv $DisplayCMD "${ResolversCsvFileTmp}.minisig" "${ResolversCsvFile}.minisig"
			install -c -m 0644 "${ResolversCsvFileTmp}.minisig" "${ResolversCsvFile}.minisig"
		fi
		#mv $DisplayCMD "$ResolversCsvFileTmp" "$ResolversCsvFile"
		install -c -m 0644 "$ResolversCsvFileTmp" "$ResolversCsvFile"
	fi
	if [ -f $MySB_InstallDir/files/dnscrypt-resolvers.csv ]; then
		rm $DisplayCMD $MySB_InstallDir/files/dnscrypt-resolvers.csv
	fi

	if [ -f $ResolversCsvFile ] && CheckCommand 0 csvtool; then
		# Clean the table 'dnscrypt_resolvers'
		Func_SQL_Command 'DELETE' 'MySB_db' 'dnscrypt_resolvers' '1' "$DisplaySQL"

		# Get resolvers information from 'dnscrypt-resolvers.csv'
		ResolversTable="`csvtool -t ',' -u '|' cat $ResolversCsvFile | csvtool drop 1 - | sed 's/ /#/g;'`"
		for Line in $ResolversTable; do
			Name="`echo $Line | awk '{split($0,a,\"|\"); print a[1]}' | sed 's/#/ /g;'`"
			FullName="`echo $Line | awk '{split($0,a,\"|\"); print a[2]}' | sed 's/#/ /g;'`"
			Description="`echo $Line | awk '{split($0,a,\"|\"); print a[3]}' | sed 's/#/ /g;'`"
			Location="`echo $Line | awk '{split($0,a,\"|\"); print a[4]}' | sed 's/#/ /g;'`"
			Coordinates="`echo $Line | awk '{split($0,a,\"|\"); print a[5]}' | sed 's/#/ /g;'`"
			URL="`echo $Line | awk '{split($0,a,\"|\"); print a[6]}' | sed 's/#/ /g;' | sed 's/http.\/\//http:\/\//g;'`"
			Version="`echo $Line | awk '{split($0,a,\"|\"); print a[7]}' | sed 's/#/ /g;'`"
			DnssecVal="`echo $Line | awk '{split($0,a,\"|\"); print a[8]}' | sed 's/#/ /g;'`"
			NoLogs="`echo $Line | awk '{split($0,a,\"|\"); print a[9]}' | sed 's/#/ /g;'`"
			Namecoin="`echo $Line | awk '{split($0,a,\"|\"); print a[10]}' | sed 's/#/ /g;'`"
			ResolverAddress="`echo $Line | awk '{split($0,a,\"|\"); print a[11]}' | sed 's/#/ /g;'`"
			ProviderName="`echo $Line | awk '{split($0,a,\"|\"); print a[12]}' | sed 's/#/ /g;'`"
			ProviderPublicKey="`echo $Line | awk '{split($0,a,\"|\"); print a[13]}' | sed 's/#/ /g;'`"
			ProviderPublicKeyTxtRecord="`echo $Line | awk '{split($0,a,\"|\"); print a[14]}' | sed 's/#/ /g;'`"

			# Add new informations in DB (don't want IPv6)
			if [ -z "`echo $Name | grep 'ipv6'`" ]; then
				Func_SQL_Command 'INSERT' 'MySB_db' 'dnscrypt_resolvers' "name,full_name,description,location,coordinates,url,version,dnssec,no_logs,namecoin,resolver_address,provider_name,provider_public_key,provider_public_key_txt_record,is_activated,is_wished" "\"$Name\",\"$FullName\",\"$Description\",\"$Location\",\"$Coordinates\",\"$URL\",\"$Version\",\"$DnssecVal\",\"$NoLogs\",\"$Namecoin\",\"$ResolverAddress\",\"$ProviderName\",\"$ProviderPublicKey\",\"$ProviderPublicKeyTxtRecord\",\"0\",\"0\"" "$DisplaySQL"
			fi
		done

		# Force use of all provider taht accept 'dnssec' and 'no logs'
		Func_SQL_Command 'UPDATE' 'MySB_db' 'dnscrypt_resolvers' "is_wished='1'" "dnssec='yes' AND no_logs='yes' AND namecoin='no'" "$DisplaySQL"
	fi
}

##################### LAST LINE ######################################
