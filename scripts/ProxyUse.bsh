# Functions - Begin
#------------------------------------------------------------

# Get proxy config infos
fnGetProxyConfigInfos() {
	# Get MySQL proxy infos
	log_daemon_msg "$ProxyUse_GetConfigMysqlProxy"
	rsync -avz --timeout=10 -e "sshpass -p $gsProxySshPass ssh -p $gsProxySshPort -o Compression=yes -x -T -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" $gsProxySshUser@$gsProxyAddress:/root/.config.cnf /root/.config_proxy.cnf &> /dev/null
	if [ -f /root/.config_proxy.cnf ]; then
		perl -pi -e "s/localhost/127.0.0.1/g" /root/.config_proxy.cnf
		perl -pi -e "s/3306/3307/g" /root/.config_proxy.cnf
		gfnStatusLSB 0
	else
		bContinue=2 && gfnStatusLSB 1
	fi

	# Get MySB proxy infos
	log_daemon_msg "$ProxyUse_GetConfigMysbProxy"
	rsync -avz --timeout=10 -e "sshpass -p $gsProxySshPass ssh -p $gsProxySshPort -o Compression=yes -x -T -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null" $gsProxySshUser@$gsProxyAddress:/etc/MySB/config /etc/MySB/config_proxy &> /dev/null
	if [ -f /etc/MySB/config_proxy ]; then
		perl -pi -e "s/MySB_InstallDir/Proxy_InstallDir/g" /etc/MySB/config_proxy
		sed -i '/EnvLang/d' /etc/MySB/config_proxy
		gfnStatusLSB 0
	else
		bContinue=3 && gfnStatusLSB 1
	fi
}

# MySQL init
fnInitProxyMySQL() {
	local sPid

	case "$InitSwitch" in
		'start')
			log_daemon_msg "$ProxyUse_InitProxyMySQL"
			if [ -f /root/.config_proxy.cnf ]; then
				# Start SSH tunnel for access to MySQL on proxy server
				if [ -z "`ps ax | grep 'ssh' | grep '3307:localhost:3306'`" ]; then
					sshpass -p $gsProxySshPass ssh -M -S Proxy_MySQL -4 -fN -L 3307:localhost:3306 $gsProxySshUser@$gsProxyAddress -p $gsProxySshPort -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null &> /dev/null
					ssh -S Proxy_MySQL -O check $gsProxySshUser@$gsProxyAddress &> /dev/null
					if [ $? -ne 0 ]; then
						bContinue=4 && gfnStatusLSB 1
					else
						gfnStatusLSB 0
					fi
				else
					gfnStatusLSB 0
				fi
			else
				bContinue=5 && gfnStatusLSB 1
			fi
		;;
		'stop')
			log_daemon_msg "$ProxyUse_StopProxyMySQL"
			case "$gbProxyInfos" in
				0)
					sPid="`ps ax | grep 'ssh' | grep 'Proxy_MySQL' | awk '{ print $1 }'`"
					[ ! -z "$sPid" ] && kill -9 $sPid
					gfnStatusLSB 0
				;;
				1)
					ssh -S Proxy_MySQL -O exit $gsProxySshUser@$gsProxyAddress &> /dev/null
					case "$?" in
						0|255)	gfnStatusLSB 0;;
						*)		bContinue=6 && gfnStatusLSB 1;;
					esac
				;;
			esac
		;;
		'status')
			log_daemon_msg "$ProxyUse_StatusProxyMySQL"
			case "$gbProxyInfos" in
				0)
					sPid="`ps ax | grep 'ssh' | grep 'Proxy_MySQL' | awk '{ print $1 }'`"
					[ ! -z "$sPid" ] && gfnStatusLSB 0 || gfnStatusLSB 1
				;;
				1)
					ssh -S Proxy_MySQL -O check $gsProxySshUser@$gsProxyAddress &> /dev/null
					case "$?" in
						0)	gfnStatusLSB 0;;
						*)	gfnStatusLSB 1;;
					esac
				;;
			esac
		;;
	esac
}

# Add local informations into proxy DB
fnPopulateProxyDataBase() {
	local sRequestValues sValue nUserId sUserIdent sUserMail nScgiPort nRtorrentPort bIsActive sIPv4 sHostname sCheckBy

	## Add all users on proxy
	log_daemon_msg "$ProxyUse_AddAllUsers"
	cmdMySQL 'Proxy_db' "DELETE FROM users WHERE users_ident != '$gsMainUserName';"
	sRequestValues="`cmdMySQL 'MySB_db' "SELECT id_users,users_ident,users_email,scgi_port,rtorrent_port,is_active FROM users;" | sed 's/\t/|/g;'`"
	for sValue in $sRequestValues; do
		nUserId="`echo $sValue | awk '{split($0,a,"|"); print a[1]}'`"
		sUserIdent="`echo $sValue | awk '{split($0,a,"|"); print a[2]}'`"
		sUserMail="`echo $sValue | awk '{split($0,a,"|"); print a[3]}'`"
		nScgiPort="`echo $sValue | awk '{split($0,a,"|"); print a[4]}'`"
		nRtorrentPort="`echo $sValue | awk '{split($0,a,"|"); print a[5]}'`"
		bIsActive="`echo $sValue | awk '{split($0,a,"|"); print a[6]}'`"

		if [ "$sUserIdent" != "$gsMainUserName" ]; then
			cmdMySQL 'Proxy_db' "INSERT INTO users (id_users,users_ident,users_email,scgi_port,rtorrent_port,is_active) VALUES ('$nUserId','$sUserIdent','$sUserMail','$nScgiPort','$nRtorrentPort','$bIsActive');"
		else
			cmdMySQL 'Proxy_db' "UPDATE users SET users_email='$sUserMail', scgi_port='$nScgiPort', rtorrent_port='$nRtorrentPort' WHERE users_ident='$gsMainUserName';"
		fi
	done
	gfnStatusLSB

	## Update users addresses on proxy
	log_daemon_msg "$ProxyUse_UpdateUsersAddresses"
	# Delete all on proxy
	cmdMySQL 'Proxy_db' "DELETE FROM users_addresses WHERE imported='1';"
	# Add main server into proxy
	cmdMySQL 'Proxy_db' "INSERT INTO users_addresses (id_users,ipv4,hostname,check_by,is_active,imported,last_update) VALUES ('$gnMainUserId','$gsSrvIpAddressExt','$gsHostNameFqdn','hostname','1','1','`date +%Y-%m-%d\ %H:%M:%S`');"
	# Add all on proxy
	sRequestValues="`cmdMySQL 'MySB_db' "SELECT id_users,ipv4,hostname,check_by,is_active FROM users_addresses WHERE is_active='1';" | sed 's/\t/|/g;'`"
	for sValue in $sRequestValues; do
		nUserId="`echo $sValue | awk '{split($0,a,"|"); print a[1]}'`"
		sIPv4="`echo $sValue | awk '{split($0,a,"|"); print a[2]}'`"
		sHostname="`echo $sValue | awk '{split($0,a,"|"); print a[3]}'`"
		sCheckBy="`echo $sValue | awk '{split($0,a,"|"); print a[4]}'`"
		bIsActive="`echo $sValue | awk '{split($0,a,"|"); print a[5]}'`"

		if [ "$sHostname" != "$gsProxyAddress" ]; then
			cmdMySQL 'Proxy_db' "INSERT INTO users_addresses (id_users,ipv4,hostname,check_by,is_active,imported,last_update) VALUES ('$gnMainUserId','$sIPv4','$sHostname','$sCheckBy','$bIsActive','1','`date +%Y-%m-%d\ %H:%M:%S`');"
		fi
	done
	gfnStatusLSB

	## Apply security rules (users' addresses & ports)
	log_daemon_msg "$ProxyUse_ApplySecurityRules"
	if [ -f /etc/MySB/config_proxy ]; then
		source /etc/MySB/config_proxy
		sshpass -p $gsProxySshPass ssh -p $gsProxySshPort -o Compression=yes -x -T -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $gsProxySshUser@$gsProxyAddress screen -dmS MySB_SecurityRules /bin/bash $Proxy_InstallDir/bin/MySB_SecurityRules 'refresh' '--users' 'SCREEN' &> /dev/null
		gfnStatusLSB 0
	else
		gfnStatusLSB 1
	fi
}

# Init SSH tunnel for all users
fnInitProxyUsers() {
	local sValues nRtorrentPort

	case "$InitSwitch" in
		'start')
			# rTorrent sessions
			gfnListCountUsers 'normal' #($gsUsersList)
			for SeedboxUser in $gsUsersList; do
				log_daemon_msg "$ProxyUse_CreateUserTunnel [$SeedboxUser]"
				sValues="`cmdMySQL 'MySB_db' "SELECT rtorrent_port FROM users WHERE users_ident='$SeedboxUser';" | sed 's/\t/|/g;'`"
				nRtorrentPort="`echo $sValues | awk '{split($0,a,"|"); print a[1]}'`"

				if [ -z "`ps ax | grep 'ssh' | grep "$gsProxyAddress:$nRtorrentPort:localhost:$nRtorrentPort"`" ]; then
					sshpass -p $gsProxySshPass ssh -M -S Proxy_${SeedboxUser} -4 -fN -R $gsProxyAddress:$nRtorrentPort:localhost:$nRtorrentPort $gsProxySshUser@$gsProxyAddress -p $gsProxySshPort -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null &> /dev/null
					ssh -S Proxy_${SeedboxUser} -O check $gsProxySshUser@$gsProxyAddress &> /dev/null
					if [ $? -ne 0 ]; then
						(( bContinue++ ))
						gfnStatusLSB 1
					else
						gfnStatusLSB 0
					fi
				else
					gfnStatusLSB 0
				fi
			done
		;;
		'stop')
			gfnListCountUsers 'normal' #($gsUsersList)
			for SeedboxUser in $gsUsersList; do
				log_daemon_msg "$ProxyUse_StopUserTunnel [$SeedboxUser]"

				case "$gbProxyInfos" in
					0)
						sPid="`ps ax | grep 'ssh' | grep "Proxy_${SeedboxUser}" | awk '{ print $1 }'`"
						[ ! -z "$sPid" ] && kill -9 $sPid
						gfnStatusLSB 0
					;;
					1)
						ssh -S Proxy_${SeedboxUser} -O exit $gsProxySshUser@$gsProxyAddress &> /dev/null
						case $? in
							0|255)	gfnStatusLSB 0;;
							*)		gfnStatusLSB 1;;
						esac
					;;
				esac
			done
		;;
		'status')
			gfnListCountUsers 'normal' #($gsUsersList)
			for SeedboxUser in $gsUsersList; do
				log_daemon_msg "$ProxyUse_StatusUserTunnel [$SeedboxUser]"

				case "$gbProxyInfos" in
					0)
						sPid="`ps ax | grep 'ssh' | grep "Proxy_${SeedboxUser}" | awk '{ print $1 }'`"
						[ ! -z "$sPid" ] && gfnStatusLSB 0 || gfnStatusLSB 1
					;;
					1)
						ssh -S Proxy_${SeedboxUser} -O check $gsProxySshUser@$gsProxyAddress &> /dev/null
						case $? in
							0)	gfnStatusLSB 0;;
							*)	gfnStatusLSB 1;;
						esac
					;;
				esac
			done
		;;
	esac
}

# Edit .rtorrent.rc files
fnEditRtorrentConfigFiles() {
	local nNumLine nRtorrentPort bCreateAfterClean

	gfnListCountUsers 'normal' #($gsUsersList)
	for SeedboxUser in $gsUsersList; do
		# rTorrent stop
		if [ -f /etc/init.d/rtorrent-$SeedboxUser ]; then
			bToRestart="`cmdMySQL 'MySB_db' "SELECT rtorrent_restart FROM users WHERE users_ident='$SeedboxUser';"`"
			service rtorrent-$SeedboxUser status &> /dev/null
			[ $? -eq 0 ] && bToRestart=1
			cmdMySQL 'MySB_db' "UPDATE users SET rtorrent_restart='$bToRestart' WHERE users_ident='$SeedboxUser';"
			service rtorrent-$SeedboxUser stop
		fi

		log_daemon_msg "$ProxyUse_EditRtorrentConfigFiles [$SeedboxUser]"
		case "$InitSwitch" in
			'start')
				nRtorrentPort="`cmdMySQL 'MySB_db' "SELECT rtorrent_port FROM users WHERE users_ident='$SeedboxUser';"`"
				nNumLine=$(cat /home/$SeedboxUser/.rtorrent.rc | grep 'http_proxy =' -n -m 1 | cut -d ':' -f 1)
				sed -i '/http_proxy =/d' /home/$SeedboxUser/.rtorrent.rc
				sed -i ""$nNumLine"i\http_proxy = localhost:$nRtorrentPort" /home/$SeedboxUser/.rtorrent.rc
				nNumLine=$(cat /home/$SeedboxUser/.rtorrent.rc | grep 'network.http.proxy_address.set =' -n -m 1 | cut -d ':' -f 1)
				sed -i '/network.http.proxy_address.set =/d' /home/$SeedboxUser/.rtorrent.rc
				sed -i ""$nNumLine"i\network.http.proxy_address.set = localhost:$nRtorrentPort" /home/$SeedboxUser/.rtorrent.rc
			;;
			'stop')
				nNumLine=$(cat /home/$SeedboxUser/.rtorrent.rc | grep 'http_proxy =' -n -m 1 | cut -d ':' -f 1)
				sed -i '/http_proxy =/d' /home/$SeedboxUser/.rtorrent.rc
				sed -i ""$nNumLine"i\http_proxy =" /home/$SeedboxUser/.rtorrent.rc
				nNumLine=$(cat /home/$SeedboxUser/.rtorrent.rc | grep 'network.http.proxy_address.set =' -n -m 1 | cut -d ':' -f 1)
				sed -i '/network.http.proxy_address.set =/d' /home/$SeedboxUser/.rtorrent.rc
				sed -i ""$nNumLine"i\network.http.proxy_address.set =" /home/$SeedboxUser/.rtorrent.rc
			;;
		esac
		gfnStatusLSB

		# rTorrent restart
		service cron status &> /dev/null
		[ $? -eq 0 ] && bCreateAfterClean=1
		bCreateAfterClean="`cmdMySQL 'MySB_db' "SELECT rtorrent_restart FROM users WHERE users_ident='$SeedboxUser' AND is_active='1';"`"

		if [ "$bCreateAfterClean" -eq 1 ] && [ -f /etc/init.d/rtorrent-$SeedboxUser ]; then
			bToRestart="`cmdMySQL 'MySB_db' "SELECT rtorrent_restart FROM users WHERE users_ident='$SeedboxUser';"`"
			[ "$bToRestart" -eq 1 ] && service rtorrent-$SeedboxUser start
			cmdMySQL 'MySB_db' "UPDATE users SET rtorrent_restart='0' WHERE users_ident='$SeedboxUser';"
		fi
	done
}

#------------------------------------------------------------
# Functions - End
#------------------------------------------------------------


######################################################################
#
# S T A R T   C O M M A N D   L I N E   M O D E
#
######################################################################

if [ "$gbProxyInfos" -eq 0 ] && [ "$gnProxyMode" -ne 2 ] && [ "$InitSwitch" == "stop" ]; then
	fnInitProxyUsers "$InitSwitch"
	fnInitProxyMySQL "$InitSwitch"
elif [ "$gbProxyInfos" -eq 1 ] && [ "$gnProxyMode" -eq 1 ]; then
	case "$InitSwitch" in
		'start')
			fnGetProxyConfigInfos
			[ $bContinue -eq 1 ] && fnInitProxyMySQL "$InitSwitch"
			[ $bContinue -eq 1 ] && fnPopulateProxyDataBase
			[ $bContinue -eq 1 ] && fnInitProxyUsers
			[ $bContinue -eq 1 ] && fnEditRtorrentConfigFiles
			if [ $bContinue -gt 1 ]; then
				echo -e "${CRED}$ProxyUse_ErrorOccured$CEND"
				echo -e "${CRED}Code: $bContinue$CEND"
				echo
			fi
		;;
		'stop'|'status')
			fnInitProxyMySQL "$InitSwitch"
			fnInitProxyUsers "$InitSwitch"
			[ "$InitSwitch" == "stop" ] && fnEditRtorrentConfigFiles
		;;
		'add_user')
			if [ ! -z "$SomeArgs" ]; then
				# Get infos for last user added
				sRequestValues="`cmdMySQL 'MySB_db' "SELECT users_email,rtorrent_port,account_type FROM users WHERE users_ident='$SomeArgs';" | sed 's/\t/|/g;'`"
				sUserEmail="`echo $sRequestValues | awk '{split($0,a,"|"); print a[1]}'`"
				sUserRtorrentPort="`echo $sRequestValues | awk '{split($0,a,"|"); print a[2]}'`"
				sUserAccountType="`echo $sRequestValues | awk '{split($0,a,"|"); print a[3]}'`"

				if [ ! -z "$sUserEmail" ] && [ ! -z "$sUserRtorrentPort" ] && [ "$sUserAccountType" == "normal" ]; then
					# Init MySQL tunnel
					fnInitProxyMySQL 'start'
					# Add new user into proxy DB
					log_daemon_msg "$ProxyUse_AddNewUser [$SeedboxUser]"
					if [ $bContinue -eq 1 ]; then
						cmdMySQL 'MySB_db' "INSERT INTO users (users_ident,users_email,rtorrent_port,account_type) VALUES ('$SomeArgs','$sUserEmail','$sUserRtorrentPort','$sUserAccountType');"
						gfnStatusLSB 0
					else
						gfnStatusLSB 1
					fi
				fi
			fi

		;;
		'del_user')
			if [ ! -z "$SomeArgs" ]; then
				# Init MySQL tunnel
				fnInitProxyMySQL 'start'
				# Delete user's tunnel
				log_daemon_msg "$ProxyUse_StopUserTunnel [$SomeArgs]"
				ssh -S Proxy_${SomeArgs} -O exit $gsProxySshUser@$gsProxyAddress &> /dev/null
				case "$?" in
					0|255)	gfnStatusLSB 0;;
					*)		gfnStatusLSB 1;;
				esac
				# Delete user from proxy database
				log_daemon_msg "$ProxyUse_DeleteUser [$SomeArgs]"
				cmdMySQL 'Proxy_db' "DELETE FROM users WHERE users_ident='$SomeArgs';"
				gfnStatusLSB
				# Update proxy security rules
				log_daemon_msg "$ProxyUse_ApplySecurityRules"
				if [ -f /etc/MySB/config_proxy ]; then
					source /etc/MySB/config_proxy
					sshpass -p $gsProxySshPass ssh -p $gsProxySshPort -o Compression=yes -x -T -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $gsProxySshUser@$gsProxyAddress screen -dmS MySB_SecurityRules /bin/bash $Proxy_InstallDir/bin/MySB_SecurityRules 'refresh' '--users' 'SCREEN' &> /dev/null
					gfnStatusLSB 0
				else
					gfnStatusLSB 1
				fi
			fi
		;;
		'options_system')
			if [ ! -z "$SomeArgs" ]; then
				# Init MySQL tunnel
				fnInitProxyMySQL 'start'

				log_daemon_msg "$ProxyUse_UpdateSystemTable"
				# Get table system values
				sRequestValues="`cmdMySQL 'MySB_db' "SELECT ip_restriction,pgl_email_stats,pgl_watchdog_email,dnscrypt,logwatch FROM system WHERE id_system='1';" | sed 's/\t/|/g;'`"
				bIpResctiction="`echo $sRequestValues | awk '{split($0,a,"|"); print a[1]}'`"
				bPglEmailStats="`echo $sRequestValues | awk '{split($0,a,"|"); print a[2]}'`"
				bPglWatchEmail="`echo $sRequestValues | awk '{split($0,a,"|"); print a[3]}'`"
				bDNScrypt="`echo $sRequestValues | awk '{split($0,a,"|"); print a[4]}'`"
				bLogwatch="`echo $sRequestValues | awk '{split($0,a,"|"); print a[5]}'`"
				# Update table system into proxy
				cmdMySQL 'Proxy_db' "UPDATE system SET ip_restriction='$bIpResctiction', pgl_email_stats='$bPglEmailStats', pgl_watchdog_email='$bPglWatchEmail', dnscrypt='$bDNScrypt', logwatch='$bLogwatch' WHERE id_system='1';"
				gfnStatusLSB 0

				log_daemon_msg "$ProxyUse_ApplyConfig"
				# Add command for ApplyConfig scripts
				nPriority="`cmdMySQL 'Proxy_db' "SELECT max(priority) FROM commands;"`"
				[ "$nPriority" == "NULL" ] && nPriority=1 || (( nPriority++ ))
				cmdMySQL 'Proxy_db' "INSERT INTO commands (commands,reload,priority,args,user) VALUES ('Options_System','1','$nPriority','$SomeArgs','$gsMainUserName');"
				# Execute ApplyConfig script from proxy
				if [ -f /etc/MySB/config_proxy ]; then
					source /etc/MySB/config_proxy
					sshpass -p $gsProxySshPass ssh -p $gsProxySshPort -o Compression=yes -x -T -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $gsProxySshUser@$gsProxyAddress screen -dmS ApplyConfig /bin/bash $Proxy_InstallDir/scripts/ApplyConfig.bsh "$gsMainUserName" 'DO_APPLY' &> /dev/null
					gfnStatusLSB 0
				else
					gfnStatusLSB 1
				fi
			fi
		;;
		'dnscrypt_config')
			# Init MySQL tunnel
			fnInitProxyMySQL 'start'

			log_daemon_msg "$ProxyUse_UpdateSystemTDnscryptConfig"
			# Get table system values
			sRequestValues="`cmdMySQL 'MySB_db' "SELECT processes_qty,no_logs,dnssec,namecoin,random FROM dnscrypt_config WHERE id_dnscrypt_config='1';" | sed 's/\t/|/g;'`"
			nProcessQty="`echo $sRequestValues | awk '{split($0,a,"|"); print a[1]}'`"
			sNoLogs="`echo $sRequestValues | awk '{split($0,a,"|"); print a[2]}'`"
			sDNSsec="`echo $sRequestValues | awk '{split($0,a,"|"); print a[3]}'`"
			sNamecoin="`echo $sRequestValues | awk '{split($0,a,"|"); print a[4]}'`"
			sRandom="`echo $sRequestValues | awk '{split($0,a,"|"); print a[5]}'`"
			# Update table system into proxy
			cmdMySQL 'Proxy_db' "UPDATE dnscrypt_config SET processes_qty='$nProcessQty', no_logs='$sNoLogs', dnssec='$sDNSsec', namecoin='$sNamecoin', random='$sRandom' WHERE id_dnscrypt_config='1';"
			gfnStatusLSB 0

			# Apply security rules on proxy
			log_daemon_msg "$ProxyUse_ApplySecurityRules"
			if [ -f /etc/MySB/config_proxy ]; then
				source /etc/MySB/config_proxy
				sshpass -p $gsProxySshPass ssh -p $gsProxySshPort -o Compression=yes -x -T -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $gsProxySshUser@$gsProxyAddress screen -dmS MySB_SecurityRules /bin/bash $Proxy_InstallDir/bin/MySB_SecurityRules 'create' 'APPLYCONFIG' &> /dev/null
				gfnStatusLSB 0
			else
				gfnStatusLSB 1
			fi
		;;
		'blocklists')
			# Init MySQL tunnel
			fnInitProxyMySQL 'start'

			# Dump 'blocklists' table
			log_daemon_msg "$ProxyUse_DumpBlocklists"
			mysqldump --defaults-extra-file=/root/.config.cnf MySB_db blocklists > $MySB_InstallDir/temp/blocklists.sql
			[ $? -eq 0 ] && gfnStatusLSB 0 || gfnStatusLSB 1

			# Restore 'blocklists' table into proxy
			log_daemon_msg "$ProxyUse_RestoreBlocklists"
			mysql --defaults-extra-file=/root/.config_proxy.cnf --database=MySB_db < $MySB_InstallDir/temp/blocklists.sql
			[ $? -eq 0 ] && gfnStatusLSB 0 || gfnStatusLSB 1

			# Apply security rules on proxy
			log_daemon_msg "$ProxyUse_ApplySecurityRules"
			if [ -f /etc/MySB/config_proxy ]; then
				source /etc/MySB/config_proxy
				sshpass -p $gsProxySshPass ssh -p $gsProxySshPort -o Compression=yes -x -T -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $gsProxySshUser@$gsProxyAddress screen -dmS MySB_SecurityRules /bin/bash $Proxy_InstallDir/bin/MySB_SecurityRules 'refresh' '--blocklists' 'APPLYCONFIG' &> /dev/null
				gfnStatusLSB 0
			else
				gfnStatusLSB 1
			fi
		;;
		'manage_addresses')
			# Init MySQL tunnel
			fnInitProxyMySQL 'start'

			# Delete all imported addesses
			cmdMySQL 'Proxy_db' "DELETE FROM users_addresses WHERE imported='1';" -v
			# Add main server into proxy
			cmdMySQL 'Proxy_db' "INSERT INTO users_addresses (id_users,ipv4,hostname,check_by,is_active,imported,last_update) VALUES ('$gnMainUserId','$gsSrvIpAddressExt','$gsHostNameFqdn','hostname','1','1','`date +%Y-%m-%d\ %H:%M:%S`');" -v
			# Add all main user addresses to proxy
			sRequestValues="`cmdMySQL 'MySB_db' "SELECT ipv4,hostname,check_by,is_active FROM users_addresses WHERE is_active='1' AND id_users='$gnMainUserId';" | sed 's/\t/|/g;'`"
			for sValue in $sRequestValues; do
				sIPv4="`echo $sValue | awk '{split($0,a,"|"); print a[1]}'`"
				sHostname="`echo $sValue | awk '{split($0,a,"|"); print a[2]}'`"
				sCheckBy="`echo $sValue | awk '{split($0,a,"|"); print a[3]}'`"
				bIsActive="`echo $sValue | awk '{split($0,a,"|"); print a[4]}'`"

				if [ "$sHostname" != "$gsProxyAddress" ]; then
					cmdMySQL 'Proxy_db' "INSERT INTO users_addresses (id_users,ipv4,hostname,check_by,is_active,imported,last_update) VALUES ('$gnMainUserId','$sIPv4','$sHostname','$sCheckBy','$bIsActive','1','`date +%Y-%m-%d\ %H:%M:%S`');" -v
				fi
			done

			# Apply security rules on proxy
			log_daemon_msg "$ProxyUse_ApplySecurityRules"
			if [ -f /etc/MySB/config_proxy ]; then
				source /etc/MySB/config_proxy
				sshpass -p $gsProxySshPass ssh -p $gsProxySshPort -o Compression=yes -x -T -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $gsProxySshUser@$gsProxyAddress screen -dmS MySB_SecurityRules /bin/bash $Proxy_InstallDir/bin/MySB_SecurityRules 'refresh' '--users' 'APPLYCONFIG' &> /dev/null
				gfnStatusLSB 0
			else
				gfnStatusLSB 1
			fi
		;;
		*)
			echo -e "$ProxyUse_Usage"
			echo
			END=OFF
			gfnEndingScript 0
		;;
	esac
fi

