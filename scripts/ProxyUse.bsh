##################### FIRST LINE #####################################

# gnProxyMode = 0: disabled, 1: enabled, 2: proxy mode

if [ "$gnProxyMode" -eq 2 ]; then
	echo -e "${CRED}$Global_ProxyOn_NoFonction$CEND"
	gfnEndingScript 0
fi

#### VARs
nNbArgs=$#
for (( nArgs=1; nArgs<=$nNbArgs; nArgs++ )); do
	case "$nArgs" in
		1)	InitSwitch="$1";;
		2)
			case "$2" in
				--*)	SomeArgs="$2";;
				*)		ModeSwitch="$2";;
			esac
		;;
		3)	ModeSwitch="$3";;
	esac
done
# By default, bContinue must egal 1
bContinue=1

