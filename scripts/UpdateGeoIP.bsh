##################### FIRST LINE #####################################

#### VARs
GeoIpDir="$MySB_InstallDir/files/GeoIP/"

if [ ! -d /usr/share/GeoIP ]; then
	mkdir -vp /usr/share/GeoIP
fi

if [ "$1" != "INSTALL" ]; then
	if [ -f $GeoIpDir/GeoIP.dat.gz ]; then
		rm -vf $GeoIpDir/GeoIP.dat.gz
	fi
	# if [ -f $GeoIpDir/GeoIPv6.dat.gz ]; then
		# rm -vf $GeoIpDir/GeoIPv6.dat.gz
	# fi
	if [ -f $GeoIpDir/GeoLiteCity.dat.gz ]; then
		rm -vf $GeoIpDir/GeoLiteCity.dat.gz
	fi
	# if [ -f $GeoIpDir/GeoLiteCityv6.dat.gz ]; then
		# rm -vf $GeoIpDir/GeoLiteCityv6.dat.gz
	# fi
	if [ -f $GeoIpDir/GeoIPASNum.dat.gz ]; then
		rm -vf $GeoIpDir/GeoIPASNum.dat.gz
	fi
	# if [ -f $GeoIpDir/GeoIPASNumv6.dat.gz ]; then
		# rm -vf $GeoIpDir/GeoIPASNumv6.dat.gz
	# fi
fi

if [ ! -f $GeoIpDir/GeoIP.dat.gz ]; then
	curl --retry 5 -kSL -o "$GeoIpDir/GeoIP.dat.gz" "http://geolite.maxmind.com/download/geoip/database/GeoLiteCountry/GeoIP.dat.gz"
fi
# if [ ! -f $GeoIpDir/GeoIPv6.dat.gz ]; then
	#curl --retry 5 -kSL -o "$GeoIpDir/GeoIPv6.dat.gz" "http://geolite.maxmind.com/download/geoip/database/GeoIPv6.dat.gz"
# fi
if [ ! -f $GeoIpDir/GeoLiteCity.dat.gz ]; then
	curl --retry 5 -kSL -o "$GeoIpDir/GeoLiteCity.dat.gz" "http://geolite.maxmind.com/download/geoip/database/GeoLiteCity.dat.gz"
fi
# if [ ! -f $GeoIpDir/GeoLiteCityv6.dat.gz ]; then
	#curl --retry 5 -kSL -o "$GeoIpDir/GeoLiteCityv6.dat.gz" "http://geolite.maxmind.com/download/geoip/database/GeoLiteCityv6-beta/GeoLiteCityv6.dat.gz"
# fi
if [ ! -f $GeoIpDir/GeoIPASNum.dat.gz ]; then
	curl --retry 5 -kSL -o "$GeoIpDir/GeoIPASNum.dat.gz" "http://download.maxmind.com/download/geoip/database/asnum/GeoIPASNum.dat.gz"
fi
# if [ ! -f $GeoIpDir/GeoIPASNumv6.dat.gz ]; then
	#curl --retry 5 -kSL -o "$GeoIpDir/GeoIPASNumv6.dat.gz" "http://download.maxmind.com/download/geoip/database/asnum/GeoIPASNumv6.dat.gz"
# fi

cd $GeoIpDir/
if [ -f GeoIP.dat.gz ]; then
	gunzip GeoIP.dat.gz
	mv -vf GeoIP.dat /usr/share/GeoIP/GeoIP.dat
fi
if [ -f GeoIPv6.dat.gz ]; then
	gunzip GeoIPv6.dat.gz
	mv -vf GeoIPv6.dat /usr/share/GeoIP/GeoIPv6.dat
fi
if [ -f GeoLiteCity.dat.gz ]; then
	gunzip GeoLiteCity.dat.gz
	mv -vf GeoLiteCity.dat /usr/share/GeoIP/GeoLiteCity.dat
fi
if [ -f GeoLiteCityv6.dat.gz ]; then
	gunzip GeoLiteCityv6.dat.gz
	mv -vf GeoLiteCityv6.dat /usr/share/GeoIP/GeoLiteCityv6.dat
fi
if [ -f GeoIPASNum.dat.gz ]; then
	gunzip GeoIPASNum.dat.gz
	mv -vf GeoIPASNum.dat /usr/share/GeoIP/GeoIPASNum.dat
fi
if [ -f GeoIPASNumv6.dat.gz ]; then
	gunzip GeoIPASNumv6.dat.gz
	mv -vf GeoIPASNumv6.dat /usr/share/GeoIP/GeoIPASNumv6.dat
fi

# -----------------------------------------
source $(dirname $0)/../inc/includes_after
