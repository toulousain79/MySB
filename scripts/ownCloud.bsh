##################### FIRST LINE #####################################

#### ownCloud Scan files
if [ "$IsInstalled_ownCloud" == "YES" ]; then
	# VARs
	Mode="$1"
	User="$2"
	case "$Mode" in
		'clean')
			echo `/bin/date '+%Y-%m-%d - %H:%M:%S'`" --> Files cleanup (Mode Clean)"
			su -s /bin/sh www-data -c "/usr/bin/php $ownCloudDir/occ files:cleanup"
		;;
		'scan')
			if [ ! -z "$User" ] && [ ! -z "`getent passwd $User`" ] && [ -z "`ps ax | grep "occ files:scan $User" | grep -v 'grep'`" ]; then
				echo `/bin/date '+%Y-%m-%d - %H:%M:%S'`" --> Files scan for $User"
				su -s /bin/sh www-data -c "/usr/bin/php $ownCloudDir/occ files:scan --path=\"/$User/files/MySB_Home\" --quiet"
			else
				IfCron="`Func_SQL_Command 'SELECT' 'MySB_db' 'owncloud_cron' 'system' "id_system = '1'"`"
				if [ $IfCron -eq 1 ]; then
					ListCountUsers
					for seedUser in $UsersList; do
						if [ ! -z "`getent passwd $seedUser`" ] && [ -z "`ps ax | grep "occ files:scan" | grep -v 'grep'`" ]; then
							echo `/bin/date '+%Y-%m-%d - %H:%M:%S'`" --> Files scan for $seedUser"
							su -s /bin/sh www-data -c "/usr/bin/php $ownCloudDir/occ files:scan --path=\"/$seedUser/files/MySB_Home\" --quiet"
						fi
					done
					echo `/bin/date '+%Y-%m-%d - %H:%M:%S'`" --> Files cleanup (Mode Scan)"
					su -s /bin/sh www-data -c "/usr/bin/php $ownCloudDir/occ files:cleanup"
					Func_SQL_Command 'UPDATE' 'MySB_db' 'system' "owncloud_cron = '0'" "id_system = '1'"
				fi
			fi
		;;
	esac
fi

